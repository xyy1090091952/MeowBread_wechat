/* components/course-selector/index.wxss */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

.modal-mask.show {
  opacity: 1;
  visibility: visible;
}

.popup-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94); /* 更自然的缓动曲线 */
  z-index: 1001;
  visibility: hidden;
}

.popup-container.show {
  transform: translateY(0);
  visibility: visible;
}

.popup-content {
  background-color: #FAFAFA;
  border-top-left-radius: 24px;
  border-top-right-radius: 24px;
  padding: 24px 24px calc(24px + env(safe-area-inset-bottom));
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24px;
}

.popup-title {
  font-size: 24px;
  font-weight: 700;
  color: #111111;
}

.options-group {
  margin-bottom: 32px;
}

.option-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 20px;
  background-color: #FFFFFF;
  border-radius: 16px;
  margin-bottom: 12px;
  border: 2px solid transparent;
  transition: all 0.2s ease;
}

.option-item:active {
  transform: scale(0.98);
}

.option-item.selected {
  border-color: #4845F7;
  background-color: #F0F7FF;
}

.option-text-container {
  display: flex;
  flex-direction: column;
}

.option-label {
  font-size: 16px;
  font-weight: 600;
  color: #333;
}

.option-sublabel {
  font-size: 12px;
  color: #999;
  margin-top: 4px;
}

/* 选中圆圈样式 */
.radio-circle {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  border: 2px solid #DDDDDD;
  position: relative;
  box-sizing: border-box;
}

.radio-circle.selected {
  border-color: #4845F7;
  background-color: #4845F7;
}

.radio-circle.selected::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background-color: #FFFFFF;
}

.confirm-button {
  width: 100%;
  height: 56px;
  line-height: 56px;
  text-align: center;
  background-color: #4845F7;
  color: #FFFFFF;
  font-size: 18px;
  font-weight: 600;
  border-radius: 28px;
  box-shadow: 0 8rpx 16rpx rgba(72, 69, 247, 0.25);
  transition: opacity 0.2s ease;
}

.confirm-button:active {
  opacity: 0.9;
}

.option-sublabel {
  font-size: 14px;
  color: #888;
}

.confirm-button {
  width: 100%;
  height: 48px;
  line-height: 48px;
  background-color: #4845F7;
  color: white;
  border-radius: 24px;
  text-align: center;
  font-size: 16px;
  font-weight: 600;
  margin-top: 30px;
  box-sizing: border-box;
  border: none;
}