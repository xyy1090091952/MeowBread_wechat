/* components/question-type-popup/index.wxss */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
}

/* 弹窗动画样式 */
.modal-fade-in {
  animation: modalFadeIn 0.2s ease-out forwards;
}

.modal-fade-out {
  animation: modalFadeOut 0.2s ease-out forwards;
}

@keyframes modalFadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes modalFadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}

.popup-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  transform: translateY(100%);
  transition: transform 0.3s ease-out;
  z-index: 1001;
}

.popup-container.popup-show {
  transform: translateY(0);
}

.popup-content {
  background-color: #ffffff;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  padding: 48rpx 48rpx calc(48rpx + env(safe-area-inset-bottom));
  transform: translateY(100%);
  transition: transform 0.3s ease-out;
}

/* 弹窗内容动画 - 修复双重动画问题 */
.modal-mask.modal-fade-in + .popup-container .popup-content {
  transform: translateY(0);
}

.modal-mask.modal-fade-out + .popup-container .popup-content {
  transform: translateY(100%);
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.popup-title {
  font-size: 36rpx;
  font-weight: bold;
}

.close-button {
  font-size: 48rpx;
  color: #999;
  cursor: pointer;
}

.question-type-group {
  margin-bottom: 30rpx;
}

.question-type-group-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.switch-item:last-child {
  border-bottom: none;
}

.switch-label {
  font-size: 32rpx;
}

.confirm-button {
  width: 100%;
  background-color: #4845F7;
  color: white;
  border-radius: 48rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 32rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}