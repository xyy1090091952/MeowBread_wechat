.dict-card {
  width: 400rpx;
  height: 640rpx;
  background: #ffffff;
  border-radius: 48rpx;
  box-shadow: 8rpx 8rpx 32rpx rgba(0,0,0,0.08);
  position: relative;
  margin-right: 24rpx;
  flex-shrink: 0;
}
.cover-image {
  width: 336rpx;
  height: 512rpx;
  margin: 32rpx 32rpx 0 32rpx;
  border-radius: 8rpx;
  object-fit: cover;
}
.dict-info {
  position: absolute;
  bottom: 32rpx;
  left: 48rpx;
  right: 48rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #000;
}
.dict-name {
  font-size: 14px;
  font-weight: bold;
}
.dict-count {
  font-size: 12px;
  font-weight: bold;
  color: #666;
  text-align: right;
}
.progress-tag {
  position: absolute;
  top: 476rpx;
  left: 48rpx;
  width: 168rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 12px;
  font-weight: bold;
  border: 1rpx solid rgba(72,69,247,0.2);
  border-radius: 24rpx;
  background: #ffffff;
  color: #000;
} 