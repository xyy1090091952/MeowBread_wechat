.tabbar {
  position: fixed;
  left: 0;
  right: 0;
  /* 选项1：tabbar紧贴安全区域上方（默认） */
  bottom: env(safe-area-inset-bottom);
  
  /* 选项2：tabbar延伸到安全区域内（如果要覆盖整个底部，取消下面的注释）*/
  /* bottom: 0; */
  /* padding-bottom: env(safe-area-inset-bottom); */
  
  height: 136rpx; /* 与渐变背景一致 */
  display: flex;
  justify-content: center;
  align-items: center; /* 垂直居中 icon */
  box-sizing: border-box;
  z-index: 999;
}

/* 渐变背景容器 */
.bg {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0; /* 紧贴tabbar底部 */
  width: 716rpx; /*≈358px*/
  height: 136rpx; /*≈68px*/
  background: linear-gradient(90deg, rgba(232, 232, 255, 0.9) 0%, rgba(251, 251, 255, 0.9) 100%); /* 原渐变+90%透明度 */
  border-radius: 68rpx;
  box-shadow: 8rpx 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

/* 每个tab */
.tab-item {
  width: 172rpx; /*≈86px*/
  height: 136rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 1;
}

/* 移除点击缩小效果，保持统一 */
.tab-item-hover {
}

/* 选中背景 */
.tab-item.active::before {
  /* 已由统一 indicator 实现 */
}

/* 活动指示器 */
.indicator {
  position: absolute;
  top: 12rpx;
  left: 0; /* 默认位置，会被内联样式覆盖 */
  width: 172rpx;
  height: 112rpx;
  background: #f7f6ff;
  border-radius: 68rpx;
  box-shadow: 8rpx 8rpx 32rpx rgba(0, 0, 0, 0.08);
  z-index: 0;
  /* 添加平滑移动动画 - 使用动态时长 */
  transition: left ease;
}

/* 禁用动画状态 */
.indicator.no-animation {
  transition: none !important;
}

.icon {
  width: 64rpx; /*≈32px*/
  height: 64rpx;
}

.label {
  font-size: 20rpx; /*≈10px*/
  color: #9b9bfa;
  margin-top: 4rpx;
}

.label.active {
  color: #4845f7;
}