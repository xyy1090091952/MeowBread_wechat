.tabbar {
  position: fixed;
  left: 0;
  right: 0;
  /* 使导航栏紧贴安全区域上方 */
  bottom: constant(safe-area-inset-bottom);
  bottom: env(safe-area-inset-bottom);
  height: 136rpx; /* 与渐变背景一致 */
  display: flex;
  justify-content: center;
  align-items: center; /* 垂直居中 icon */
  box-sizing: border-box;
  z-index: 999;
}

/* 渐变背景容器 */
.bg {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0; /* 紧贴tabbar底部 */
  width: 716rpx; /*≈358px*/
  height: 136rpx; /*≈68px*/
  background-color: rgba(255, 255, 255, 0.9); /* 90%透明度的白色背景 */
  border-radius: 68rpx;
  box-shadow: 8rpx 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

/* 每个tab */
.tab-item {
  width: 172rpx; /*≈86px*/
  height: 136rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 1;
}

/* 点击效果 - 使用hover-class替代:active */
.tab-item-hover {
  transform: scale(0.95);
}

/* 选中背景 */
.tab-item.active::before {
  /* 已由统一 indicator 实现 */
}

/* 活动指示器 */
.indicator {
  position: absolute;
  top: 12rpx;
  left: 0; /* 默认位置，会被内联样式覆盖 */
  width: 172rpx;
  height: 112rpx;
  background: #f7f6ff;
  border-radius: 68rpx;
  box-shadow: 8rpx 8rpx 32rpx rgba(0, 0, 0, 0.08);
  z-index: 0;
  /* 添加平滑移动动画 - 减少回弹效果 */
  transition: left 0.2s ease;
}

.icon {
  width: 64rpx; /*≈32px*/
  height: 64rpx;
}

.label {
  font-size: 20rpx; /*≈10px*/
  color: #9b9bfa;
  margin-top: 4rpx;
}

.label.active {
  color: #4845f7;
}