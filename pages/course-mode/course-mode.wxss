/* pages/course-mode/course-mode.wxss - 课程模式页面样式 */

/* ==================== 课程模式页面专用动画样式 ==================== */
/* 与quiz页面保持一致的动画效果 */

/* 课程模式页面全局动画优化 - 只覆盖必要属性，保留全局fade-delay延迟 */
.fade-in-element {
  transform: translateY(30rpx); /* 与其他页面保持一致的移动幅度 */
  transition-duration: 0.8s; /* 只覆盖动画时长，不影响延迟时间 */
  transition-timing-function: cubic-bezier(0.25, 0.46, 0.45, 0.94); /* 只覆盖缓动曲线 */
}

.fade-in-element.show {
  transform: translateY(0);
}

/* ==================== 页面布局样式 ==================== */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  background-color: #ffffff;
  min-height: 100vh;
  padding: 20rpx 48rpx 40rpx 48rpx;
}

/* 筛选显示区域样式 - 与quiz页面完全一致 */
.current-filter-display {
  width: 100%; /* 100%屏幕宽度 */
  height: 64rpx; /* 高度64rpx */
  background: linear-gradient(to right, #CFE2FF, #F0F6FC); /* 左到右渐变背景 */
  border-radius: 48rpx; /* 圆角48rpx */
  display: flex;
  align-items: center;
  justify-content: flex-start; /* 改为左对齐 */
  padding-left: 48rpx; /* 左边距48rpx */
  margin-bottom: 32rpx; /* 与其他元素保持间距 */
  box-sizing: border-box; /* 确保padding不影响总宽度 */
}

.current-filter-display text {
  font-size: 24rpx; /* 文字字号24rpx */
  color: #000000; /* 黑色文字 */
  font-weight: 500; /* 稍微加粗，增强可读性 */
}

/* ==================== 筛选器模块样式 ==================== */

.filter-module {
  width: 100%;
  height: 128rpx;
  background-color: #f8f9fa;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
  border: 2rpx solid #e9ecef;
}

.filter-placeholder {
  font-size: 28rpx;
  color: #666666;
  font-weight: 400;
}

/* ==================== 课程模块样式 ==================== */

.course-list {
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 48rpx;
}

.course-item {
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 48rpx;
  box-shadow: 0px 4rpx 12rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

/* 已完成课程的背景色 */
.course-completed {
  background-color: #F6FFED;
}

/* 课程节数区域 */
.course-number {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #4845F7;
  border-radius: 60rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.course-num {
  font-size: 48rpx;
  font-weight: 900;
  color: #ffffff;
}

/* 已完成课程的节数样式 */
.course-number-completed {
  background-color: #7DF303;
}

.course-number-completed .course-num {
  color: #5DB700;
}

/* 课程信息区域 */
.course-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.course-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 8rpx;
}

.course-name-completed {
  color: #000000;
}

/* 进度信息 */
.course-progress {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.progress-text {
  font-size: 20rpx;
  color: #666666;
  font-weight: 400;
  min-width: 160rpx;
}

.progress-text-completed {
  color: #000000;
}

/* 进度条 */
.progress-bar {
  width: 240rpx;
  height: 16rpx;
  background-color: #f0f2f5;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(to right, #93CDFF, #4845F7);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.progress-fill.progress-fill-completed {
  background: #7DF303 !important;
}

/* 箭头图标 */
.course-arrow {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
  filter: none; /* 默认黑色 */
  margin-right: 48rpx;
}

.course-arrow-completed {
  filter: none; /* 保持原本颜色 */
}

/* ==================== 加载状态样式 ==================== */

.loading-container {
  width: 100%;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
  font-weight: 400;
}

/* ==================== 无数据状态样式 ==================== */

.no-data-container {
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.no-data-text {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.no-data-subtitle {
  font-size: 24rpx;
  color: #666666;
  font-weight: 400;
} 