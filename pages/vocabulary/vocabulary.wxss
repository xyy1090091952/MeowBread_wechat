/* pages/vocabulary/vocabulary.wxss */
.container {
  padding: 20rpx;
}
.search-bar {
  margin-bottom: 20rpx;
}
.search-bar input {
  border: 1rpx solid #dddddd;
  padding: 10rpx;
}
.display-mode-selector {
  margin-bottom: 20rpx;
}
.word-list .word-item,
.word-cards .word-card {
  background-color: #f8f8f8;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}
.word {
  font-size: 36rpx;
  font-weight: bold;
}
.reading, .meaning, .type, .sentence {
  font-size: 28rpx;
  color: #666666;
}
.progress-tag {
  position: absolute;
  /* 调整位置到图片左下角 */
  /* 计算过程：图片底部位置 (32rpx margin-top + 512rpx height) - 标签自身高度 (48rpx) - 距离图片底部间距 (32rpx) = 464rpx */
  top: 476rpx;
  left: 48rpx; /* 24px: cover left 16px + offset 8px */
  width: 150rpx; /* 92px */
  height: 48rpx; /* 24px */
  line-height: 48rpx;
  text-align: left;
  padding-left: 16rpx;
  font-size: 20rpx;
  border: 1rpx solid rgba(72,69,247,0.2);
  border-radius: 24rpx;
  background: #ffffff;
  color: #000;
}

/* ———————— 之前被误删的样式恢复 ———————— */
.page {
  background: #ffffff;
  height: 100%;
}

/* 顶部横幅 */
.banner {
  margin: 24rpx 48rpx 0 48rpx;
  height: 64rpx;
  background: linear-gradient(90deg,#f0f6fc 0%,#cfe2ff 100%);
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  padding: 0 48rpx; /* 24px */
}
.banner-text {
  font-size: 24rpx;
  color: #4845f7;
  font-weight: 600;
}

/* 分类标题 */
.section-title {
  margin: 48rpx 48rpx 24rpx;
  font-size: 48rpx; /* 24px */
  font-weight: bold;
  font-family: 'Inter', sans-serif;
  color: #111111;
  line-height: 60rpx;
}

/* 词典滚动 */
.dict-scroll-wrapper {
  /* 让 scroll-view 占满整行宽度，不再需要左内边距 */
  box-sizing: border-box;
}

.dict-scroll {
  width: 100%;
  white-space: nowrap;
  box-sizing: border-box;
}

.dict-row {
  display: inline-flex; /* 使用inline-flex确保宽度自适应内容 */
  flex-direction: row;
  overflow: visible;
  padding-bottom: 48rpx; /* 给阴影留空间 */
  /* 
    为左右两边都留出 48rpx 的边距，与页面标题对齐。
    padding-left: 48rpx; 直接设置左边距。
    padding-right: 24rpx; 因为每个卡片都有 margin-right: 24rpx，所以这里只需要 24rpx 就能凑够 48rpx 的右边距。
  */
  padding-left: 48rpx;
  padding-right: 24rpx;
}

/* 卡片 */
.dict-card {
  width: 400rpx;
  height: 640rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 8rpx 8rpx 32rpx rgba(0,0,0,0.08);
  position: relative;
  margin-right: 24rpx; /* 卡片间距12px */
  overflow: visible;
  flex-shrink: 0; /* 防止卡片在flex布局中被压缩 */
}

.cover-image {
  width: 336rpx;
  height: 512rpx;
  margin: 32rpx 32rpx 0 32rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

.dict-info {
  position: absolute;
  bottom: 32rpx;
  left: 48rpx; /* 缩进 8px (16rpx) */
  right: 48rpx; /* 缩进 8px (16rpx) */
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #000;
}

.dict-name {
  font-weight: 600;
}

.dict-count {
  text-align: right;
}

/* ———————— 恢复结束 ———————— */
