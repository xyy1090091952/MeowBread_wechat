/* pages/gashapon/gashapon.wxss */
page {
  height: 100%;
}

.gashapon-container {
  position: relative;
  width: 100vw;
  height: 100vh;
  background: linear-gradient(180deg, #D6F1FF 0%, #F5DCE7 43.78%, #FFE8D9 62.53%, #FFFFD7 100%);
  overflow: hidden;
}

/* 金币显示 */
.coin-display {
  position: fixed;
  left: 24rpx;
  display: flex;
  align-items: center;
  height: 64rpx;
  padding: 0 24rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 32rpx;
  z-index: 101; /* 比导航栏高一级 */
  backdrop-filter: blur(10px);
}

.coin-icon-display {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.coin-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFB059;
}

/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  z-index: 100;
}

.nav-back-icon {
  width: 64rpx;
  height: 64rpx;
  position: absolute; /* 使用绝对定位，方便控制位置 */
  left: 24rpx;
  /* top, right, bottom, left 和 transform 会在 align-items: center; 作用下失效，因此无需设置 */
}

.nav-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #000;
  margin: 0 auto; /* 居中标题 */
}

/* 右侧功能按钮 */
.side-buttons {
  position: fixed;
  right: 24rpx;
  display: flex;
  flex-direction: column;
  z-index: 100;
}

.side-button {
  display: flex;
  align-items: center;
  justify-content: center; padding: 12rpx 24rpx;
  width: 100rpx;
  height: 64rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  font-size: 32rpx; 
  color: #333;
}

/* 扭蛋机主体 */
.gashapon-machine {
  position: absolute;
  bottom: 580rpx; /* 调整此值将图片上移 */
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx; /* 根据实际图片尺寸调整 */
  height: 600rpx; /* 根据实际图片尺寸调整 */
}

/* 底部操作区域 */
.bottom-sheet {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 48rpx 48rpx 0 0;
  padding: 32rpx 0; /* 上下padding，左右为0 */
  padding-bottom: 68rpx; /* 为底部安全区留出空间 */
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.08);
}

/* 选择tag区域 */
.sheet-header {
  position: relative; /* 为横条指示器提供定位基准 */
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 48rpx; /* 左右边距48rpx */
}

.series-tags {
  display: flex;
  width: 100%;
}

.series-tag {
  flex: 1; /* 平均分配空间 */
  height: 72rpx; /* 设置固定高度 */
  border-radius: 48rpx;
  background-color: transparent; /* 去掉背景颜色 */
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center; /* 文案居中显示 */
}

.series-tag.active {
  background-color: transparent; /* 去掉背景颜色 */
  border-color: transparent;
}

.series-tag text {
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.5); /* 黑色50%透明度 */
}

.series-tag.active text {
  color: #000000; /* 选中状态黑色 */
}

/* 滑动横条指示器 */
.tag-indicator {
  position: absolute;
  bottom: 0;
  width: 128rpx;
  height: 6rpx;
  background-color: #4845F7;
  border-radius: 3rpx;
  transition: left 0.3s ease;
  z-index: 1;
}

/* 纯视觉展示区域 */
.visual-display {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 32rpx;
  margin-bottom: 40rpx;
  height: 340rpx; /* 固定高度，与原来的series-card保持一致 */
}

.display-card {
  width: 240rpx;
  height: 320rpx;
  border-radius: 48rpx;
  opacity: 1;
  transform: scale(1);
  transition: opacity 0.3s ease, transform 0.3s ease;
}

.display-card.hide {
  opacity: 0;
  transform: scale(0.8);
}

.display-card.show {
  opacity: 1;
  transform: scale(1);
}

.display-card.bounce-in {
  animation: bounceIn 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* Q弹果冻效果的关键帧动画 */
@keyframes bounceIn {
  0% {
    opacity: 0;
    transform: scale(0.3);
  }
  50% {
    opacity: 1;
    transform: scale(1.02);
  }
  70% {
    transform: scale(0.98);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

/* 抽奖按钮 */
.draw-button {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 96rpx;
  background-color: #FFF;
  border: 2rpx solid #E0E0E0;
  border-radius: 48rpx;
  color: #333333;
  font-size: 32rpx;
  font-weight: 700;
  font-family: 'Inter', sans-serif;
  margin: 0 32rpx; /* 添加左右外边距 */
}

.coin-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}
