/* pages/gashapon/gashapon.wxss */
page {
  height: 100%;
}

.gashapon-container {
  position: relative;
  width: 100vw;
  height: 100vh;
  background: linear-gradient(180deg, #D6F1FF 0%, #F5DCE7 43.78%, #FFE8D9 62.53%, #FFFFD7 100%);
  overflow: hidden;
}

/* 金币显示 */
.coin-display {
  position: fixed;
  left: 24rpx;
  display: flex;
  align-items: center;
  height: 64rpx;
  padding: 0 24rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 32rpx;
  z-index: 101; /* 比导航栏高一级 */
  backdrop-filter: blur(10px);
}

.coin-icon-display {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.coin-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFB059;
}

/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  z-index: 100;
}

.nav-back-icon {
  width: 64rpx;
  height: 64rpx;
  position: absolute; /* 使用绝对定位，方便控制位置 */
  left: 24rpx;
  /* top, right, bottom, left 和 transform 会在 align-items: center; 作用下失效，因此无需设置 */
}

.nav-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #000;
  margin: 0 auto; /* 居中标题 */
}

/* 右侧功能按钮 */
.side-buttons {
  position: fixed;
  right: 24rpx;
  display: flex;
  flex-direction: column;
  z-index: 100;
}

.side-button {
  display: flex;
  align-items: center;
  justify-content: center; padding: 12rpx 24rpx;
  width: 100rpx;
  height: 64rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  font-size: 32rpx; 
  color: #333;
}

/* 调试按钮特殊样式 */
.debug-button {
  background: #fff;
  color: #333;
  font-size: 28rpx;
  border: 2rpx solid #e0e0e0;
}



/* 扭蛋机主体 */
.gashapon-machine {
  position: absolute;
  bottom: 580rpx; /* 调整此值将图片上移 */
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx; /* 根据实际图片尺寸调整 */
  height: 600rpx; /* 根据实际图片尺寸调整 */
}

/* 底部操作区域 */
.bottom-sheet {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(180deg, #FFD6E5 0%, #FFFFFF 100%); /* 默认第一个tag的渐变 */
  border-radius: 48rpx 48rpx 0 0;
  padding: 32rpx 0; /* 上下padding，左右为0 */
  padding-bottom: 68rpx; /* 为底部安全区留出空间 */
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.08);
  overflow: hidden; /* 确保伪元素不溢出 */
}

/* 使用伪元素实现背景渐变过渡 */
.bottom-sheet::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, #FEE78B 0%, #FFFFFF 100%); /* 系列2的背景 */
  opacity: 0; /* 初始透明 */
  transition: opacity 0.6s ease; /* 透明度过渡 */
  z-index: 0; /* 在内容后面但在默认背景前面 */
  pointer-events: none; /* 确保不阻挡点击事件 */
}



/* 系列2激活时显示伪元素背景 */
.bottom-sheet.series-2::before {
  opacity: 1; /* 显示金黄色渐变 */
}

/* 选择tag区域 */
.sheet-header {
  position: relative; /* 为横条指示器提供定位基准 */
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 48rpx; /* 左右边距48rpx */
  z-index: 1; /* 确保在伪元素上方 */
}

.series-tags {
  display: flex;
  width: 100%;
}

.series-tag {
  flex: 1; /* 平均分配空间 */
  height: 72rpx; /* 设置固定高度 */
  border-radius: 48rpx;
  background-color: transparent; /* 去掉背景颜色 */
  border: 2rpx solid transparent;
  transition: all 0.6s ease;
  display: flex;
  align-items: center;
  justify-content: center; /* 文案居中显示 */
}

.series-tag.active {
  background-color: transparent; /* 去掉背景颜色 */
  border-color: transparent;
}

.series-tag text {
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.5); /* 黑色50%透明度 */
}

.series-tag.active text {
  color: #000000; /* 选中状态黑色 */
}

/* 滑动横条指示器 */
.tag-indicator {
  position: absolute;
  bottom: 0;
  width: 128rpx;
  height: 6rpx;
  background-color: #FF4E91; /* 默认第一个tag的颜色 */
  border-radius: 3rpx;
  transition: left 0.6s ease, background-color 0.6s ease; /* 添加颜色过渡动画 */
  z-index: 1;
}

/* 第一个tag选中时的指示器颜色 - 特效扭蛋 */
.bottom-sheet.series-1 .tag-indicator {
  background-color: #FF4E91;
}

/* 第二个tag选中时的指示器颜色 - 人类口粮 */
.bottom-sheet.series-2 .tag-indicator {
  background-color: #FFCA1D;
}

/* 可滑动的内容区域 */
.content-swiper {
  width: 100%;
  height: 380rpx; /* 减少高度，因为抽奖按钮移出了 */
  z-index: 1; /* 确保在伪元素上方 */
}

.swiper-item {
  width: 100%;
  height: 100%;
}

.series-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center; /* 改为居中对齐 */
}

/* 纯视觉展示区域 */
.visual-display {
  position: relative; /* 添加定位 */
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 32rpx;
  height: 340rpx; /* 固定高度，与原来的series-card保持一致 */
  z-index: 1; /* 确保在伪元素上方 */
}

.display-card {
  width: 240rpx;
  height: 320rpx;
  border-radius: 48rpx;
}

/* 固定的抽奖按钮 */
.draw-button-fixed {
  position: relative; /* 添加定位 */
  display: flex;
  align-items: center;
  justify-content: center;
  height: 96rpx;
  background-color: #FFF;
  border-radius: 48rpx;
  color: #333333;
  font-size: 32rpx;
  font-weight: 700;
  font-family: 'Inter', sans-serif;
  margin: 20rpx 32rpx 0 32rpx; /* 上边距20rpx，左右边距32rpx */
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05); /* 使用项目约定的shadow样式 */
  z-index: 1; /* 确保在伪元素上方 */
  transition: all 0.3s ease; /* 添加过渡动画 */
}

/* 抽奖按钮悬停效果 */
.draw-button-fixed:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 原有的抽奖按钮样式保留（以防其他地方使用） */
.draw-button {
  position: relative; /* 添加定位 */
  display: flex;
  align-items: center;
  justify-content: center;
  height: 96rpx;
  background-color: #FFF;
  border-radius: 48rpx;
  color: #333333;
  font-size: 32rpx;
  font-weight: 700;
  font-family: 'Inter', sans-serif;
  margin: 0 32rpx; /* 添加左右外边距 */
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05); /* 使用项目约定的shadow样式 */
  z-index: 1; /* 确保在伪元素上方 */
}

.coin-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}
