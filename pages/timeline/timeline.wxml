<!--pages/timeline/timeline.wxml-->
<view class="container">
  <!-- 筛选显示区域 - 与quiz页面保持一致 -->
  <view class="current-filter-display fade-in-element fade-delay-1 {{pageLoaded ? 'show' : ''}}" wx:if="{{currentFilterDisplay}}">
    <text>你当前选择了: {{currentFilterDisplay}}</text>
  </view>

  <!-- 筛选器模块 -->
  <view class="filter-module fade-in-element fade-delay-2 {{pageLoaded ? 'show' : ''}}">
    <text class="filter-placeholder">筛选器模块 - 内容待定</text>
  </view>

  <!-- 课程模块列表 -->
  <view class="course-list fade-in-element fade-delay-3 {{pageLoaded ? 'show' : ''}}" wx:if="{{!isLoading}}">
    <!-- 示例课程 - 未完成状态 -->
    <view class="course-item">
      <view class="course-number">
        <text class="course-num">1</text>
      </view>
      <view class="course-info">
        <text class="course-name">私は田中です</text>
        <view class="course-progress">
          <text class="progress-text">5/12</text>
          <view class="progress-bar">
            <view class="progress-fill" style="width: 41.67%;"></view>
          </view>
        </view>
      </view>
      <image class="course-arrow" src="/images/icons/arrow_right.svg" mode="aspectFit"></image>
    </view>

    <!-- 示例课程 - 已完成状态 -->
    <view class="course-item course-completed">
      <view class="course-number course-number-completed">
        <text class="course-num">2</text>
      </view>
      <view class="course-info">
        <text class="course-name course-name-completed">これは本です</text>
        <view class="course-progress">
          <text class="progress-text progress-text-completed">8/8</text>
          <view class="progress-bar">
            <view class="progress-fill progress-fill-completed" style="width: 100%;"></view>
          </view>
        </view>
      </view>
      <image class="course-arrow course-arrow-completed" src="/images/icons/arrow_right.svg" mode="aspectFit"></image>
    </view>

    <!-- 示例课程 - 未开始状态 -->
    <view class="course-item">
      <view class="course-number">
        <text class="course-num">3</text>
      </view>
      <view class="course-info">
        <text class="course-name">あの人は誰ですか</text>
        <view class="course-progress">
          <text class="progress-text">0/15</text>
          <view class="progress-bar">
            <view class="progress-fill" style="width: 0%;"></view>
          </view>
        </view>
      </view>
      <image class="course-arrow" src="/images/icons/arrow_right.svg" mode="aspectFit"></image>
    </view>
  </view>

  <!-- 加载中状态 -->
  <view class="loading-container" wx:if="{{isLoading}}">
    <text class="loading-text">正在加载课程数据...</text>
  </view>
</view> 