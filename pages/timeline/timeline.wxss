/* pages/timeline/timeline.wxss */

/* ==================== Timeline页面专用动画样式 ==================== */
/* 与quiz页面保持一致的动画效果 */

/* Timeline页面全局动画优化 - 只覆盖必要属性，保留全局fade-delay延迟 */
.fade-in-element {
  transform: translateY(30rpx); /* 与其他页面保持一致的移动幅度 */
  transition-duration: 0.8s; /* 只覆盖动画时长，不影响延迟时间 */
  transition-timing-function: cubic-bezier(0.25, 0.46, 0.45, 0.94); /* 只覆盖缓动曲线 */
}

.fade-in-element.show {
  transform: translateY(0);
}

/* ==================== 页面布局样式 ==================== */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  background-color: #ffffff;
  min-height: 100vh;
  padding: 20rpx 48rpx 40rpx 48rpx;
}

/* 筛选显示区域样式 - 与quiz页面完全一致 */
.current-filter-display {
  width: 100%; /* 100%屏幕宽度 */
  height: 64rpx; /* 高度64rpx */
  background: linear-gradient(to right, #CFE2FF, #F0F6FC); /* 左到右渐变背景 */
  border-radius: 48rpx; /* 圆角48rpx */
  display: flex;
  align-items: center;
  justify-content: flex-start; /* 改为左对齐 */
  padding-left: 48rpx; /* 左边距48rpx */
  margin-bottom: 32rpx; /* 与其他元素保持间距 */
  box-sizing: border-box; /* 确保padding不影响总宽度 */
}

.current-filter-display text {
  font-size: 24rpx; /* 文字字号24rpx */
  color: #000000; /* 黑色文字 */
  font-weight: 500; /* 稍微加粗，增强可读性 */
}

/* ==================== 时间线内容样式 ==================== */

.timeline-content {
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.timeline-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 80rpx 40rpx;
}

.placeholder-text {
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.placeholder-subtitle {
  font-size: 24rpx;
  color: #666666;
  font-weight: 400;
}

/* ==================== 加载状态样式 ==================== */

.loading-container {
  width: 100%;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
  font-weight: 400;
} 