/* pages/filter/filter.wxss */
.page-container {
  background-color: #F8F8F8; /* 页面背景色，比卡片浅一点 */
  padding: 30rpx 30rpx 120rpx; /* 底部留出按钮空间 */
  min-height: 100vh;
  box-sizing: border-box;
}

.section-card {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 30rpx;
}

.filter-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #F0F0F0; /* 分割线颜色更浅 */
}

.filter-item:last-child {
  border-bottom: none;
}

.filter-item-label {
  font-size: 28rpx;
  color: #333333;
}

.picker-display {
  font-size: 28rpx;
  color: #666666;
  display: flex;
  align-items: center;
}

.picker-display.disabled {
  color: #AAAAAA;
}

.picker-arrow {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

.question-type-group {
  margin-bottom: 20rpx;
}

.question-type-group:last-child {
  margin-bottom: 0;
}

.question-type-group-title {
  font-size: 26rpx;
  color: #888888;
  margin-bottom: 20rpx;
}

.switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.switch-item:last-child {
  border-bottom: none;
}

.switch-label {
  font-size: 28rpx;
  color: #333333;
}

.confirm-button {
  position: fixed;
  bottom: 60rpx; /* 增加底部距离，保留安全区 */
  left: 30rpx; /* 左右保持原有边距，实现通栏效果 */
  right: 30rpx;
  background-color: #98CF3F; /* 主题绿色 */
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 16rpx; /* 圆角调整为 8px (16rpx) */
  padding: 25rpx 0;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(152, 207, 63, 0.3);
}

.confirm-button[disabled] {
  background-color: #E0E0E0;
  color: #AAAAAA;
  box-shadow: none;
}