<!--pages/answer/answer.wxml-->
<view class="container">
  <view class="content">
    <!-- 题库筛选按钮 -->
    <view class="option-card filter-card" bindtap="navigateToFilter">
      <text class="option-text">题库筛选</text>
      <image class="option-icon" src="/images/icons/arrow_right.png" />
    </view>
    <!-- 显示当前题库筛选范围 -->
    <text class="filter-display-text">{{currentFilterDisplay}}</text>

    <!-- 中间的分割线 -->
    <view class="main-divider"></view>

    <!-- 快速答题按钮 -->
    <view class="option-card quick-quiz-card" bindtap="startQuickQuiz">
      <text class="option-text">快速答题</text>
      <image class="option-icon" src="/images/icons/arrow_right.png" />
    </view>

    <!-- 无尽模式按钮 -->
    <view class="option-card endless-mode-card" bindtap="startEndlessQuiz">
      <text class="option-text">无尽模式</text>
      <image class="option-icon" src="/images/icons/arrow_right.png" />
    </view>
  </view>
</view>
