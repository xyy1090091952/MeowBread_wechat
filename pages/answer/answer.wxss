/* pages/answer/answer.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  background-color:rgb(255, 255, 255); /* Figma 页面背景色 */
  min-height: 100vh;
  padding: 0 48rpx 40rpx 48rpx; /* Figma 左右内边距 24px, 对应图片中按钮两侧留白 */
}

.page-title-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: baseline;
  padding: 10rpx 0 30rpx 0; /* Figma 上下内边距 */
}

.main-title {
  font-size: 48rpx; /* Figma 主标题字号 24px */
  color: #4440F4; /* Figma 主标题颜色 */
  margin-right: 16rpx; /* Figma 主副标题间距 8px */
  margin-left: 24rpx;
  font-weight: bold;
}

.sub-title {
  font-size: 28rpx; /* Figma 副标题字号 14px */
  color: #4440F4; /* Figma 副标题颜色 */
}

.banner-container {
  width: 100%;
  margin-bottom: 24rpx; /* Figma Banner与下方内容间距 24px */
  border-radius: 48rpx; /* Figma Banner圆角 12px */
  overflow: hidden;
}

.banner-image {
  width: 100%;
  display: block;
}

.content {
  width: 100%;
}

.option-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 40rpx; /* Figma 内边距 (16px, 20px) */
  border-radius: 48rpx; /* Figma 圆角 (16px), 调整圆角以匹配图片 */
  margin-bottom: 24rpx; /* 卡片间距 (12px) */
  box-shadow: 0px 8rpx 24rpx rgba(0, 0, 0, 0.05); /* Figma 阴影 */
}

.filter-card {
  background: linear-gradient(90deg, #4845F7 0%, #93CDFF 100%); /* Figma 渐变背景色 */
  border-image-source: linear-gradient(90deg, #4845F7 0%, #93CDFF 100%); /* Figma 渐变描边 */
}

.standard-mode-card {
  background-color: #FFFFFF;
  position: relative; /* 相对定位用于伪元素定位 */
  border-radius: 48rpx; /* 继承父容器圆角 */
  z-index: 1;
}

.standard-mode-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: inherit; /* 保持圆角一致 */
  padding: 4rpx; /* 描边宽度 */
  background: linear-gradient(90deg, #4845F7 0%, #93CDFF 100%); /* 应用渐变 */
  -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
  -webkit-mask-composite: xor; /* 兼容性处理 */
  mask-composite: exclude;
  z-index: -1; /* 置于内容下方 */
}

.endless-mode-card {
  background-color: #FFFFFF;
  position: relative; /* 相对定位用于伪元素定位 */
  border-radius: 48rpx; /* 继承父容器圆角 */
  z-index: 1;
}

.endless-mode-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: inherit; /* 保持圆角一致 */
  padding: 4rpx; /* 描边宽度 */
  background: linear-gradient(90deg, #4845F7 0%, #93CDFF 100%); /* 应用渐变 */
  -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
  -webkit-mask-composite: xor; /* 兼容性处理 */
  mask-composite: exclude;
  z-index: -1; /* 置于内容下方 */
}

.wrong-questions-card {
  background-color: #FFFFFF;
  position: relative; /* 相对定位用于伪元素定位 */
  border-radius: 48rpx; /* 使用具体数值代替继承，匹配设计稿圆角 */
  z-index: 1;
}

.wrong-questions-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: inherit; /* 保持圆角一致 */
  padding: 4rpx; /* 描边宽度 */
  background: linear-gradient(90deg, #FF1F74 0%, #FF4E91 100%); /* Figma 红色渐变描边 */
  -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
  -webkit-mask-composite: xor; /* 兼容性处理 */
  mask-composite: exclude;
  z-index: -1; /* 置于内容下方 */
}

.option-text-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex-grow: 1;
}

.option-main-text {
  font-size: 32rpx; /* Figma 字体大小 16px */
  font-weight: 500; /* Figma 字重 Medium */
}

.filter-card .option-main-text,
.filter-card .option-sub-text {
  color: #FFFFFF; /* 筛选卡片文字颜色 */
}

.standard-mode-card .option-main-text,
.endless-mode-card .option-main-text,
.wrong-questions-card .option-main-text {
  color: #1D2129; /* 其他卡片主文字颜色 */
}

.option-sub-text {
  font-size: 24rpx; /* Figma 字体大小 12px */
  margin-top: 8rpx; /* Figma 上边距 4px */
}

.standard-mode-card .option-sub-text,
.endless-mode-card .option-sub-text,
.wrong-questions-card .option-sub-text {
  color: #86909C; /* 其他卡片副文字颜色 */
}

.filter-sub-text {
  /* filter-card 的副文本在上面已经统一设置颜色 */
}

.option-icon {
  width: 32rpx; /* Figma 图标尺寸 16px */
  height: 32rpx; /* Figma 图标尺寸 16px */
  margin-left: 20rpx; /* 图标与文字容器的间距 */
}
