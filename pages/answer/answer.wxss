/* pages/answer/answer.wxss */
.filter-display-text {
  font-size: 24rpx; /* 设置较小的字号 */
  color: #888; /* 设置字体颜色 */
  margin-top: 10rpx; /* 设置上边距 */
  margin-bottom: 20rpx; /* 设置下边距，与分割线保持一定距离 */
  text-align: center; /* 文本居中显示 */
  width: 100%; /* 宽度占满父容器 */
  display: block; /* 设置为块级元素，使其能够占据整行并应用上下边距 */
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-color: #F8F8F8; /* Figma 页面背景色 */
  min-height: 100vh;
  padding: 40rpx 30rpx; /* 页面整体内边距，上下边距调整为20px，左右15px */
}

.content {
  width: 100%;
}

.option-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 30rpx; /* Figma 内边距 (16px, 15px) */
  border-radius: 20rpx; /* Figma 圆角 (10px) */
  margin-bottom: 24rpx; /* 卡片间距 (12px) */
  box-shadow: 0px 4rpx 12rpx rgba(0, 0, 0, 0.08); /* Figma 阴影 */
}

.filter-card {
  background-color: #98CF3F; /* 题库筛选背景色 */
  color: #FFFFFF; /* 题库筛选文字颜色 */
}

.quick-quiz-card,
.endless-mode-card {
  background-color: #000000; /* 快速答题和无尽模式背景色 */
  color: #FFFFFF; /* 快速答题和无尽模式文字颜色 */
}

.option-text {
  font-size: 32rpx; /* Figma 字体大小 16px */
  font-weight: bold; /* 根据图片，文字似乎有加粗 */
}

.option-icon {
  width: 32rpx; /* Figma 图标尺寸 16px */
  height: 32rpx; /* Figma 图标尺寸 16px */
}

.main-divider {
  height: 16rpx; /* Figma 中间分割线高度 (8px) */
  width: 60rpx; /* Figma 中间分割线宽度 (30px) */
  background-color: #E0E0E0; /* Figma 中间分割线颜色 */
  border-radius: 4rpx; /* Figma 中间分割线圆角 (2px) */
  margin: 24rpx auto; /* 上下边距12px，左右自动居中 */
}
