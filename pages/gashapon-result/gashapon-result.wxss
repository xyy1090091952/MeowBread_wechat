/* pages/gashapon-result/gashapon-result.wxss */
page {
  /* 设置从白色到淡黄色的垂直线性渐变背景 */
  background: linear-gradient(180deg, #FFFFFF 0%, #FFE9B6 100%);
  height: 100vh; /* 确保背景铺满整个视口 */
  display: flex;
  flex-direction: column;
  justify-content: space-between; /* 将内容推向两端 */
  align-items: center;
}

.prize-container {
  flex: 1; /* 占据剩余空间，将按钮推到底部 */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
}

/* --- 奖品展示区 --- */
.prize-display {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}

.prize-image {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 40rpx;
}

.prize-info {
  text-align: center;
}

.prize-rarity {
  display: inline-block;
  padding: 8rpx 20rpx;
  background-color: #000;
  color: #fff;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.prize-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.prize-desc {
  font-size: 28rpx;
  color: #666;
}

/* --- 底部按钮区 --- */
.button-container {
  display: flex;
  width: 100%;
  padding: 20rpx 40rpx 60rpx; /* 增加底部安全距离 */
  box-sizing: border-box;
  gap: 20rpx; /* 按钮之间的间距 */
}

.btn {
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  border: none; /* 移除默认边框 */
}

.btn-draw-again {
  flex: 1; /* 较窄的按钮 */
  background-color: #4845F7;
  color: #fff;
}

.btn-confirm {
  flex: 2; /* 较宽的按钮 */
  background-color: #FFFFFF;
  color: #333;
  border: 1px solid #E0E0E0; /* 添加细边框 */
}