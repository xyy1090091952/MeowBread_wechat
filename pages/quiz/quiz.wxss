/* pages/quiz/quiz.wxss */
.current-filter-display {
  width: 100%;
  text-align: center; /* 文本居中 */
  margin-bottom: 10rpx; /* 和下方元素的间距 */
  color: #888; /* 文本颜色，可以根据主题调整 */
}

.current-filter-display text {
  font-size: 24rpx; /* 调小字号 */
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 48rpx;
  font-family: Arial, sans-serif;
}

/* 新增：进度条和计时器容器 */
.progress-timer-container {
  display: flex;
  align-items: center;
  width: 100%;
  margin: 15px 0 0 0;
}

/* 进度条包裹器 */
.progress-bar-wrapper {
  flex-grow: 1;
  position: relative;
  height: 24px; /* 根据Figma调整 */
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

/* 进度条背景 */
.progress-bar-background {
  background-color: #EEEEEE; /* Figma: #EEEEEE */
  height: 16px; /* Figma: 16px */
  width: 100%;
  border-radius: 24px; /* Figma: 24px */
  overflow: hidden;
  position: absolute;
}

/* 进度条前景 */
.progress-bar-foreground {
  background: linear-gradient(to right, #F0F7FC, #4845F7); /* Figma: 渐变 */
  height: 100%;
  border-radius: 24px;
  transition: width 0.3s ease-in-out;
}

/* 进度节点组 */
.progress-node-group {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}

.progress-node {
    position: absolute;
    width: 24px;
    height: 24px;
    top: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
}

.progress-node-circle {
    width: 24px; /* Figma: 24px */
    height: 24px;
    background-color: #EEEEEE; /* Figma: #EEEEEE */
    border-radius: 50%;
    position: absolute;
    box-sizing: border-box;
}

.progress-node-text {
    font-size: 12px; /* Figma: 12px */
    font-weight: 700; /* Figma: bold */
    color: #000000; /* Figma: black */
    z-index: 1;
}

/* 激活状态的节点 */
.progress-node-circle.active {
    background-color: #4845F7; /* Figma: #4845F7 */
}

.progress-node-text.active {
    color: #FFFFFF; /* Figma: white */
}


/* 计时器 */
.timer-box {
  display: flex;
  align-items: center;
  background: linear-gradient(to right, #F0F6FC, #CFE2FF); /* Figma: 渐变 */
  border-radius: 24px; /* Figma: 24px */
  padding: 6px 12px;
  margin-left: 24px; /* Increased from 16px to prevent overlap */
  height: 24px; /* Figma: 24px */
  box-sizing: border-box;
}

.timer-icon {
  width: 12px; /* Figma: 12px */
  height: 12px;
  margin-right: 6px;
}

.timer-text {
  font-size: 12px; /* Figma: 12px */
  font-weight: 700; /* Figma: bold */
  color: #000000; /* Figma: black */
}

.quiz-info {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.content-card {
  background-color: #fff;
  border-radius: 24px;
  padding: 24px 0rpx; /* 上下24px，左右48rpx的内边距 */
  margin-bottom: 24px;
  width: 100%;
  box-sizing: border-box; /* 确保padding不会影响总宽度 */
}

.question-word {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 10rpx; /* 与词性标签的间距 */
}

.question-stem-remainder {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-left: 10rpx; /* 与词性标签的间距 */
}

.question-stem-container {
  display: inline-flex; 
  align-items: center; 
  flex-wrap: wrap; 
}

.options-container {
  display: flex;
  flex-direction: column;
  gap: 12px; /* 选项之间的间距 */
}

/* 选项按钮的基本样式 */
.option-button {
  animation: fadeInUp 0.3s ease-out both; /* 加快动画速度 */
  background-color: #FFFFFF; /* 白色背景 */
  color: #000000; /* 黑色文字 */
  border: none; /* 无边框 */
  border-radius: 24px; /* 圆角 */
  padding: 0 24px; /* 左右内边距 */
  text-align: left; /* 文字左对齐 */
  font-size: 16px; /* 字体大小 */
  font-weight: 600; /* 字体粗细 */
  transition: background-color 0.2s, box-shadow 0.2s; /* 过渡效果 */
  margin-bottom: 0px; /* 下外边距 */
  display: flex; /* 使用flex布局 */
  align-items: center; /* 垂直居中 */
  height: 64px; /* 固定高度 */
  width: 100%; /* 宽度占满容器 */
  box-sizing: border-box; /* 盒模型 */
  box-shadow: 4px 4px 16px 0px rgba(0, 0, 0, 0.08); /* 阴影 */
}

.option-button.selected {
  background-color: #F0F0F0;
  border-color: #F0F0F0;
  color: #000000;
}

.fill-input {
  animation: fadeInUp 0.3s ease-out 0.2s both; /* 动画加快，延迟也相应缩短 */

  border-radius: 24rpx;
  padding: 20rpx;
  font-size: 32rpx;
  width: calc(100% - 40rpx);
  height: 200rpx;
  text-align: center;
  margin-bottom: 20rpx;
  box-shadow: 4px 4px 16px 0px rgba(0, 0, 0, 0.08); /* 阴影 */
}

.submit-button {
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 25rpx;
  font-size: 34rpx;
  width: 100%;
  text-align: center;
  box-shadow: 0 2px 5px rgba(0,0,0,0.2);
}

/* 动画定义 */
/* 问题卡片元素入场动画 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.question-header {
  animation: fadeInUp 0.3s ease-out both; /* 为题干也加上动画，并加快速度 */
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 答案卡容器，定义了弹出动画的效果 */
.answer-card-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1001;
  /* 应用名为 slideUp 的动画，持续时间0.3秒，并使用贝塞尔曲线实现快进慢出的效果 */
  animation: slideUp 0.3s cubic-bezier(0.215, 0.610, 0.355, 1);
}

.answer-card {
  background-color: #FFFFFF;
  border-top-left-radius: 24px;
  border-top-right-radius: 24px;
  padding: 24px 48rpx calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0px -4px 12px rgba(0, 0, 0, 0.08);
  width: 100%;
  box-sizing: border-box;
}

.answer-card .next-button {
  margin-top: 20px;
}

.next-button {
  background-color: #007aff; /* 蓝色背景 */
  color: white; /* 白色文字 */
  border-radius: 24rpx; /* 大圆角 */
  height: 45px; /* 固定高度 */
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  font-weight: 600;
}

.answer-header {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 16px;
}

.answer-card.correct .answer-header {
  color: #28a745;
}

.answer-card.incorrect .answer-header {
  color: #dc3545;
}

.answer-text {
  font-size: 30rpx;
  color: #333;
}

.word-details {
  font-size: 16px;
  color: #333333;
}

.word-details text {
  display: block;
  margin-bottom: 5rpx;
}

.score-display {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.timer-display {
  font-size: 28rpx;
  color: #888;
}

.progress-display {
  font-size: 28rpx;
  color: #888;
}

/* Styles for correct/incorrect options */
.option-button.selected {
  background-color: #007aff;
  color: white;
  border-color: #007aff;
}

.option-button.correct {
  background-color: #4CAF50; /* Green for correct */
  color: white;
  border-color: #388E3C;
}

.option-button.incorrect {
  background-color: #f44336; /* Red for incorrect */
  color: white;
  border-color: #D32F2F;
}

.option-button.correct-unselected {
  background-color: #a5d6a7; /* Lighter green for unselected correct answer */
  color: #333;
  border-color: #81c784;
}

/* Styles for fill input feedback */
.fill-input.correct-fill {
  border-color: #4CAF50;
  background-color: #e8f5e9;
}

.fill-input.incorrect-fill {
  border-color: #f44336;
  background-color: #ffebee;
}

/* Fixed action buttons at the bottom */
.action-buttons-fixed {
  position: fixed;
  bottom: 0; /* 调整此值以增加底部安全区 */
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  padding: 20rpx 20rpx calc(20rpx + constant(safe-area-inset-bottom)) 20rpx; /* 适配 iPhone X 等底部安全区 */
  padding: 20rpx 20rpx calc(20rpx + env(safe-area-inset-bottom)) 20rpx; /* 适配 iPhone X 等底部安全区 */
  background-color: #fff; /* Add a background color to prevent content overlap */
  z-index: 1000; /* Ensure buttons are on top */
}

.button-group {
  display: flex;
  width: 100%;
  gap: 20rpx; /* Space between skip and submit buttons */
  align-items: center; /* 恢复为 center, 确保按钮垂直居中对齐 */
}

.half-width-button {
  flex: 1; /* 让按钮平分宽度 */
  height: 88rpx; /* 固定高度为44px (@1x) */
  padding: 0; /* 移除上下padding，因为高度已固定 */
  font-size: 32rpx;
  text-align: center;
  border-radius: 24rpx;
  display: flex; /* 使用flex布局 */
  align-items: center; /* 内部文本垂直居中 */
  justify-content: center; /* 内部文本水平居中 */
  box-sizing: border-box; /* 确保padding和border不会增加元素实际宽高 */
  /* border: 1px solid transparent;  暂时移除这个统一边框，看看是否是边框导致的问题 */
}

.full-width-button {
  width: 100%;
  box-sizing: border-box;
}

.skip-button {
  background-color: #f0f0f0; /* Light grey, or choose another color */
  color: #333;
}

.submit-button {
  background-color: #4CAF50; /* Green, or choose another color */
  color: white;
  box-shadow: none; /* 移除投影 */
  border: 1px solid #ddd; /* 统一边框样式，与skip-button一致 */
}

.next-button {
  background-color: #007bff; /* Blue, or choose another color */
  color: white;
  border: none; /* 下一题按钮通常不需要边框 */
}

/* 词性标签样式 */
.question-header {
  animation: fadeInUp 0.5s ease-out both;
  display: flex;
  justify-content: center; /* 水平居中 */
  margin-bottom: 40rpx;
  text-align: center; /* 确保容器内文本也居中，以防单词过长换行 */
}

.question-stem-container {
  display: inline-flex; /* 改为 inline-flex 使其内容在一行，并且容器宽度自适应内容 */
  align-items: center; /* 垂直居中单词和标签 */
  flex-wrap: wrap; /* 允许换行，如果内容太长 */
  justify-content: center; /* 内部元素也居中 */
}

.part-of-speech-tag {
  font-size: 10px; /* 调小字体 */
  padding: 2px 4px; /* 减小内边距 */
  border-radius: 4px;
  color: white;
  line-height: normal; /* 确保行高正常，避免影响垂直对齐 */
  display: inline-block; /* 或者 inline-flex，确保能和其他文本元素良好配合 */
  vertical-align: baseline; /* 尝试基线对齐 */
  background-color: #6c757d; /* 为未匹配词性提供默认背景色 */
}

.part-of-speech-tag.verb {
  background-color: #598BF1;
}

.part-of-speech-tag.intransitive-verb {
  background-color: #39D763;
}

.part-of-speech-tag.transitive-verb {
  background-color: #FAAD3A;
}

.part-of-speech-tag.noun {
  background-color: #B79EFF;
}

.part-of-speech-tag.adjective {
  background-color: #F56593;
}

.part-of-speech-tag.adverb {
  background-color: #FF375C;
}

.part-of-speech-tag.particle {
  background-color: #5bc0de;
}

.part-of-speech-tag.conjunction {
  background-color: #aa66cc;
}

.part-of-speech-tag.adjectival-noun {
  background-color: #17a2b8;
}

.part-of-speech-tag.pronoun {
  background-color: #6f42c1;
}

.part-of-speech-tag.numeral {
  background-color: #fd7e14;
}

