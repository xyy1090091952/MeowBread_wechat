.answer-card .word-details {
  text-align: left; /* 详情左对齐 */
  margin-top: 20rpx;
}

.detail-item {
  display: flex;
  margin-bottom: 12px;
}

.detail-label {
  font-weight: normal;
  margin-right: 8px;
  color: #888888;
  width: 60px; /* 确保对齐 */
}

.detail-value {
