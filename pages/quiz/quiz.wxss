  border-top-left-radius: 24px;
  border-top-right-radius: 24px;
  padding: 24px 48rpx calc(24rpx + env(safe-area-inset-bottom));
  width: 100%;
  box-sizing: border-box;
}

/* 答题正确时的渐变背景 - 从上到下 CFE2FF 到 F0F6FC */
.answer-card.correct {
