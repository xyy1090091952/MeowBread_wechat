/* pages/quiz/quiz.wxss */

/* ==================== Quiz页面专用动画样式 ==================== */
/* 与profile页面保持一致的动画效果 */

/* Quiz页面全局动画优化 - 只覆盖必要属性，保留全局fade-delay延迟 */
.fade-in-element {
  transform: translateY(30rpx); /* 与answer和profile页面保持一致的移动幅度 */
  transition-duration: 0.8s; /* 只覆盖动画时长，不影响延迟时间 */
  transition-timing-function: cubic-bezier(0.25, 0.46, 0.45, 0.94); /* 只覆盖缓动曲线 */
}

.fade-in-element.show {
  transform: translateY(0);
}

/* ==================== 原有样式 ==================== */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  background-color: #ffffff;
  min-height: 100vh;
  padding: 20rpx 48rpx 40rpx 48rpx;
}

/* 筛选显示区域样式 */
.current-filter-display {
  width: 100%; /* 100%屏幕宽度 */
  height: 64rpx; /* 高度64rpx */
  background: linear-gradient(to right, #CFE2FF, #F0F6FC); /* 左到右渐变背景 */
  border-radius: 48rpx; /* 圆角48rpx */
  display: flex;
  align-items: center;
  justify-content: flex-start; /* 改为左对齐 */
  padding-left: 48rpx; /* 左边距48rpx */
  box-sizing: border-box; /* 确保padding不影响总宽度 */
}

.current-filter-display text {
  font-size: 24rpx; /* 文字字号24rpx */
  color: #000000; /* 黑色文字 */
  font-weight: 500; /* 稍微加粗，增强可读性 */
  /* 限制只显示一行，超过时显示省略号 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

/* 新增：进度条和计时器容器 */
.progress-timer-container {
  display: flex;
  align-items: center;
  width: 100%;
  margin-top: 24rpx;
}

/* 进度条包裹器 */
.progress-bar-wrapper {
  flex-grow: 1;
  position: relative;
  height: 24px; /* 根据Figma调整 */
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

/* 进度条背景 */
.progress-bar-background {
  background-color: #EEEEEE; /* Figma: #EEEEEE */
  height: 16px; /* Figma: 16px */
  width: 100%;
  border-radius: 24px; /* Figma: 24px */
  overflow: hidden;
  position: absolute;
}

/* 进度条前景 */
.progress-bar-foreground {
  background: linear-gradient(to right, #F0F7FC, #4845F7); /* Figma: 渐变 */
  height: 100%;
  min-width: 16px; /* 最小宽度等于高度，保持圆形效果 */
  border-radius: 24px;
  transition: width 0.3s ease-in-out;
}

/* 进度节点组 */
.progress-node-group {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}

.progress-node {
    position: absolute;
    width: 24px;
    height: 24px;
    top: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
}

.progress-node-circle {
    width: 48rpx;
    height: 48rpx;
    background-color: #EEEEEE; /* Figma: #EEEEEE */
    border-radius: 50%;
    position: absolute;
    box-sizing: border-box;
}

.progress-node-text {
    font-size: 12px; /* Figma: 12px */
    font-weight: 700; /* Figma: bold */
    color: #000000; /* Figma: black */
    z-index: 1;
}

/* 激活状态的节点 */
.progress-node-circle.active {
    background-color: #4845F7; /* Figma: #4845F7 */
}

.progress-node-text.active {
    color: #FFFFFF; /* Figma: white */
}


/* 计时器 */
.timer-box {
  display: flex;
  align-items: center;
  background: linear-gradient(to right, #F0F6FC, #CFE2FF); /* Figma: 渐变 */
  border-radius: 24px; /* Figma: 24px */
  padding: 6px 12px;
  margin-left: 24px; /* Increased from 16px to prevent overlap */
  height: 24px; /* Figma: 24px */
  box-sizing: border-box;
}

.timer-icon {
  width: 12px; /* Figma: 12px */
  height: 12px;
  margin-right: 6px;
}

.timer-text {
  font-size: 12px; /* Figma: 12px */
  font-weight: 700; /* Figma: bold */
  color: #000000; /* Figma: black */
}

.quiz-info {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.content-card {
  background-color: #fff;
  border-radius: 24px;
  margin-bottom: 24px;
  width: 100%;
  box-sizing: border-box; /* 确保padding不会影响总宽度 */
}

.question-word {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 0;
}

.question-stem-remainder {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-left: 16rpx; 
}

.question-stem-container {
  display: inline-flex; 
  align-items: center; 
  flex-wrap: wrap; 
}

.options-container {
  display: flex;
  flex-direction: column;
  gap: 12px; /* 选项之间的间距 */
}

/* 选择题选项按钮的基本样式 */
.option-button {
  animation: fadeInUp 0.3s ease-out both; /* 基础动画，延迟时间通过WXML内联样式设置为0.1s+index*0.1s */
  background-color: #FFFFFF; /* 白色背景 */
  color: #000000; /* 黑色文字 */
  border: none; /* 无边框 */
  border-radius: 48rpx; /* 圆角 */
  padding: 0 24px; /* 左右内边距 */
  text-align: left; /* 文字左对齐 */
  font-size: 16px; /* 字体大小 */
  font-weight: 600; /* 字体粗细 */
  transition: background-color 0.2s, box-shadow 0.2s; /* 过渡效果 */
  margin-bottom: 0px; /* 下外边距 */
  display: flex; /* 使用flex布局 */
  align-items: center; /* 垂直居中 */
  height: 64px; /* 固定高度 */
  width: 100%; /* 宽度占满容器 */
  box-sizing: border-box; /* 盒模型 */
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05); /* 统一阴影 */
}

/* 禁用状态的选项按钮 */
.option-button.disabled {
  pointer-events: none; /* 禁用点击事件 */
  opacity: 1; /* 保持完全不透明，因为我们有其他视觉状态 */
}

/* 选项内容容器 */
.option-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

/* 选项文字 */
.option-text {
  flex: 1;
}

/* 正解标签 */
.correct-label {
  width: 44px;
  height: 24px;
  background-color: rgba(255, 255, 255, 0.6); /* 60%透明度的白色 */
  border-radius: 12px; /* 圆角 */
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  font-weight: bold;
  color: black;
}

.option-button.selected {
  background-color: #F0F0F0;
  border-color: #F0F0F0;
  color: #000000;
}

/* 填空题输入框样式 */
.fill-input-wrapper {
  /* 移除外边距，如需间距可自行调整 */
}

.fill-input {
  animation: fadeInUp 0.3s ease-out 0.1s both; /* 填空题延迟0.1s，在题目头部之后出现 */
  border-radius: 48rpx; /* 圆角 48rpx */
  padding: 20rpx;
  font-size: 16px;
  width: calc(100% - 40rpx);
  height: 200rpx;
  text-align: center;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05); /* 统一阴影 */
}

.submit-button {
  background-color: #7DF303; /* 使用统一的绿色 */
  color: black; /* 黑色文字在绿色背景上更清晰 */
  border: none;
  border-radius: 48rpx;
  padding: 25rpx;
  font-size: 34rpx;
  width: 100%;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
}

/* 动画定义 */
/* 问题卡片元素入场动画 - 从下往上淡入效果 */
@keyframes fadeInUp {
  from {
    opacity: 0; /* 初始透明度为0 */
    transform: translateY(20px); /* 初始位置向下偏移20px */
  }
  to {
    opacity: 1; /* 最终透明度为1 */
    transform: translateY(0); /* 最终位置回到原位 */
  }
}

/* 
 * 容器模块加载动画顺序说明：
 * 1. 题目头部(question-header): 0s延迟 - 首先出现
 * 2. 选择题选项(option-button): 0.1s, 0.2s, 0.3s, 0.4s延迟 - 依次出现
 * 3. 填空题输入框(fill-input): 0.1s延迟 - 在题目头部之后出现
 */

.question-header {
  animation: fadeInUp 0.3s ease-out both; /* 题目头部首先出现，无延迟 */
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 答案卡容器，定义了弹出动画的效果 */
.answer-card-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1001;
  /* 应用名为 slideUp 的动画，持续时间0.4秒，使用非常轻微的弹性缓动曲线 */
  animation: slideUp 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.05);
}

.answer-card {
