/* pages/quiz-details/quiz-details.wxss */

/* ==================== Quiz-Details页面专用动画样式 ==================== */
/* 与profile页面保持一致的动画效果 */

/* Quiz-Details页面全局动画优化 - 只覆盖必要属性，保留全局fade-delay延迟 */
.fade-in-element {
  transform: translateY(30rpx); /* 与answer和profile页面保持一致的移动幅度 */
  transition-duration: 0.8s; /* 只覆盖动画时长，不影响延迟时间 */
  transition-timing-function: cubic-bezier(0.25, 0.46, 0.45, 0.94); /* 只覆盖缓动曲线 */
}

.fade-in-element.show {
  transform: translateY(0);
}

/* ==================== 原有样式 ==================== */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  background-color: #ffffff;
  min-height: 100vh;
  padding: 20rpx 48rpx 40rpx 48rpx;
}

/* 页面标题 */
.header {
  padding: 40rpx 0 32rpx 0;
  text-align: center;
}

.page-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #1F2329;
}

/* 主要统计数据容器 - 3个等分 */
.main-stats-container {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
  margin: 48rpx 0 48rpx 0;
  width: 100vw;
  padding-left: 48rpx;
  padding-right: 48rpx;
  box-sizing: border-box;
}

.stat-card {
  flex: 1;
  height: 180rpx;
  border-radius: 48rpx;
  display: flex;
  flex-direction: column-reverse;
  align-items: center;
  justify-content: center;
}

/* 总答题数卡片 - 青绿色渐变 */
.stat-card-total {
  background: linear-gradient(to bottom, #CFFFF0 0%, #F0FCFB 100%);
  box-shadow: 8rpx 8rpx 32rpx rgba(207, 255, 240, 0.3);
}

/* 正确数卡片 - 粉色渐变 */
.stat-card-correct {
  background: linear-gradient(to bottom, #FFCFE6 0%, #FCF0F1 100%);
  box-shadow: 8rpx 8rpx 32rpx rgba(255, 207, 230, 0.3);
}

/* 正确率卡片 - 蓝色渐变 */
.stat-card-accuracy {
  background: linear-gradient(to bottom, #CFEBFF 0%, #F0F7FC 100%);
  box-shadow: 8rpx 8rpx 32rpx rgba(207, 235, 255, 0.3);
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #1F2329; /* 改为深色文字适配浅色背景 */
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 32rpx;
  color: #000000;
  font-weight: 700;
}

/* 详细数据表单 */
.detail-forms {
  width: 100vw;
  padding-left: 48rpx;
  padding-right: 48rpx;
  margin-bottom: 24rpx;
  box-sizing: border-box;
}

/* 表单项容器 */
.form-item-wrapper {
  margin-bottom: 24rpx;
}

.form-item-wrapper:last-child {
  margin-bottom: 0;
}

.form-item-container {
  background: #FFFFFF;
  border-radius: 48rpx;
  padding: 48rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 8rpx 8rpx 32rpx rgba(0, 0, 0, 0.08);
  position: relative;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

/* 左侧内容区 */
.form-item-left {
  display: flex;
  align-items: center;
  flex: 1;
}

/* 删除图标相关样式 */

/* 文字内容区 */
.form-item-content {
  flex: 1;
}

.form-label {
  font-size: 32rpx;
  color: #1F2329;
  font-weight: 600;
  line-height: 1.2;
}

/* 右侧数值区 */
.form-item-right {
  flex-shrink: 0;
}

.form-value {
  font-size: 36rpx;
  color: #1F2329;
  font-weight: 700;
}

/* 综合评级区域 */
.rating-section {
  width: 100vw;
  padding-left: 48rpx;
  padding-right: 48rpx;
  box-sizing: border-box;
}

.rating-card {
  height: 320rpx;
  background: #FFFFFF;
  border-radius: 48rpx;
  padding: 48rpx;
  box-shadow: 8rpx 8rpx 32rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
}

.rating-header {
  margin-bottom: 40rpx;
}

.rating-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2329;
}

.rating-display {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  flex-direction: column;
  margin-bottom: 40rpx;
  margin-left: 80rpx;
  flex: 1;
}

.rating-grade {
  font-size: 160rpx;
  font-weight: 800;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 评级颜色 */
.rating-C {
  color: #FF4E91;
}

.rating-B {
  color: #FF9800;
}

.rating-A {
  color: #2196F3;
}

.rating-S {
  color: #4CAF50;
}

.rating-SS {
  color: #E91E63;
}

.rating-SSS {
  background: linear-gradient(135deg, #FFD700, #FF6B35);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.rating-description {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
  margin-left: 16rpx;
}

/* 重置数据按钮区域 - 置底 */
.reset-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  padding: 24rpx 48rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background-color: #FFFFFF;
  box-sizing: border-box;
  z-index: 1000;
}

.reset-button {
  width: 100%;
  height: 96rpx;
  background-color: #FF4E91;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 8rpx 8rpx 32rpx rgba(255, 78, 145, 0.2);
  transition: all 0.2s ease;
}

.reset-button-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.reset-button:active {
  background-color: #F44788 !important;
  transition: all 0.1s ease;
}

/* 响应式设计 */
@media (max-width: 350px) {
  .container {
    padding: 0 32rpx;
    padding-bottom: calc(176rpx + env(safe-area-inset-bottom));
  }
  
  .stat-card,
  .form-item-container,
  .rating-card {
    padding: 32rpx;
  }
  
  .stat-value {
    font-size: 40rpx;
  }
  
  .rating-grade {
    font-size: 100rpx;
  }

  .reset-section {
    padding: 24rpx 32rpx;
    padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  }
} 