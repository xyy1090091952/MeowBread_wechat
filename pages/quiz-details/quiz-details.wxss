/* pages/quiz-details/quiz-details.wxss */

.container {
  min-height: 100vh;
  background-color: #FAFAFA;
  padding: 0 48rpx;
  padding-bottom: calc(176rpx + env(safe-area-inset-bottom));
}

/* 页面标题 */
.header {
  padding: 40rpx 0 32rpx 0;
  text-align: center;
}

.page-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #1F2329;
}

/* 主要统计数据容器 - 3个等分 */
.main-stats-container {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
  margin: 48rpx 0;
  width: 100vw;
  padding-left: 48rpx;
  padding-right: 48rpx;
  box-sizing: border-box;
}

.stat-card {
  flex: 1;
  height: 180rpx;
  background: linear-gradient(135deg, #4845F7 0%, #7B68EE 100%);
  border-radius: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 8rpx 8rpx 32rpx rgba(72, 69, 247, 0.15);
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

/* 详细数据表单 */
.detail-forms {
  width: 100vw;
  padding-left: 48rpx;
  padding-right: 48rpx;
  box-sizing: border-box;
}

/* 表单项容器 */
.form-item-wrapper {
  margin-bottom: 24rpx;
}

.form-item-wrapper:last-child {
  margin-bottom: 0;
}

.form-item-container {
  background: #FFFFFF;
  border-radius: 48rpx;
  padding: 48rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 8rpx 8rpx 32rpx rgba(0, 0, 0, 0.08);
  position: relative;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

/* 左侧内容区 */
.form-item-left {
  display: flex;
  align-items: center;
  flex: 1;
}

/* 删除图标相关样式 */

/* 文字内容区 */
.form-item-content {
  flex: 1;
}

.form-label {
  font-size: 32rpx;
  color: #1F2329;
  font-weight: 600;
  line-height: 1.2;
}

/* 右侧数值区 */
.form-item-right {
  flex-shrink: 0;
}

.form-value {
  font-size: 36rpx;
  color: #1F2329;
  font-weight: 700;
}

/* 综合评级区域 */
.rating-section {
  width: 100vw;
  padding-left: 48rpx;
  padding-right: 48rpx;
  box-sizing: border-box;
}

.rating-card {
  height: 320rpx;
  background: #FFFFFF;
  border-radius: 48rpx;
  padding: 48rpx;
  box-shadow: 8rpx 8rpx 32rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
}

.rating-header {
  margin-bottom: 40rpx;
}

.rating-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2329;
}

.rating-display {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin-bottom: 40rpx;
  flex: 1;
}

.rating-grade {
  font-size: 120rpx;
  font-weight: 800;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 评级颜色 */
.rating-C {
  color: #9E9E9E;
}

.rating-B {
  color: #FF9800;
}

.rating-A {
  color: #2196F3;
}

.rating-S {
  color: #4CAF50;
}

.rating-SS {
  color: #E91E63;
}

.rating-SSS {
  background: linear-gradient(135deg, #FFD700, #FF6B35);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.rating-description {
  font-size: 32rpx;
  color: #666666;
  font-weight: 500;
}

/* 重置数据按钮区域 - 置底 */
.reset-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  padding: 24rpx 48rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background-color: #FAFAFA;
  box-sizing: border-box;
  z-index: 1000;
}

.reset-button {
  width: 100%;
  height: 96rpx;
  background-color: #FF4E91;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 8rpx 8rpx 32rpx rgba(255, 78, 145, 0.2);
  transition: all 0.2s ease;
}

.reset-button-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.reset-button:active {
  background-color: #F44788 !important;
  transition: all 0.1s ease;
}

/* 响应式设计 */
@media (max-width: 350px) {
  .container {
    padding: 0 32rpx;
    padding-bottom: calc(176rpx + env(safe-area-inset-bottom));
  }
  
  .stat-card,
  .form-item-container,
  .rating-card {
    padding: 32rpx;
  }
  
  .stat-value {
    font-size: 40rpx;
  }
  
  .rating-grade {
    font-size: 100rpx;
  }

  .reset-section {
    padding: 24rpx 32rpx;
    padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  }
} 