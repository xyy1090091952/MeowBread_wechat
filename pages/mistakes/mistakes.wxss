.page {
  background-color: #F7F7F7;
  min-height: 100vh;
}

.container {
  padding: 0 32rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: baseline; /* 改为基线对齐，让不同大小的文字对齐更自然 */
  padding: 40rpx 0;
  width: 100%;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #1F2329;
  margin-left: 32rpx;
}

.mistake-count {
  font-size: 28rpx;
  color: #8A8A8A;
  margin-right: 32rpx;
}

.mistake-list-scroll {
  height: calc(100vh - 300rpx); /* 减去头部和底部按钮的高度 */
}

.mistake-item {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0px 8rpx 16rpx 0px rgba(14, 21, 44, 0.04);
  display: flex;
  flex-direction: column;
}

.item-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.status-label {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-unseen {
  color: #8A8A8A;
  background-color: #F0F0F0;
}

.status-error {
  color: #FF4D4F;
  background-color: #FFF1F0;
}

.status-corrected {
  color: #FAAD14;
  background-color: #FFFBE6;
}

.status-memorized {
  color: #52C41A;
  background-color: #F6FFED;
}

.word-info {
  display: flex;
  align-items: center;
}

.word {
  font-size: 40rpx;
  font-weight: 600;
  color: #1F2329;
  margin-right: 16rpx;
}

/* 词性标签样式与quiz页面统一 */
.type {
  font-size: 10px; /* 调小字体 */
  padding: 2px 4px; /* 减小内边距 */
  border-radius: 4px;
  color: white;
  line-height: normal; /* 确保行高正常，避免影响垂直对齐 */
  display: inline-block; /* 或者 inline-flex，确保能和其他文本元素良好配合 */
  vertical-align: baseline; /* 尝试基线对齐 */
  background-color: #6c757d; /* 为未匹配词性提供默认背景色 */
  margin-left: 8rpx; /* 调整与单词的间距 */
}

.type.verb {
  background-color: #598BF1;
}

.type.intransitive-verb {
  background-color: #39D763;
}

.type.transitive-verb {
  background-color: #FAAD3A;
}

.type.noun {
  background-color: #B79EFF;
}

.type.adjective {
  background-color: #F56593;
}

.type.adverb {
  background-color: #FF375C;
}

.type.particle {
  background-color: #5bc0de;
}

.type.conjunction {
  background-color: #aa66cc;
}

.type.adjectival-noun {
  background-color: #17a2b8;
}

.type.pronoun {
  background-color: #6f42c1;
}

.type.numeral {
  background-color: #fd7e14;
}

.item-bottom {
  font-size: 26rpx;
  color: #8A8A8A;
  line-height: 40rpx;
}

.status-toggle {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  border: 1px solid #E0E0E0;
}

.status-text {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.status-switch {
  transform: scale(0.7);
}

.status-toggle.corrected {
  border-color: #FFC107;
}

.status-text.corrected {
  color: #1F2329;
}

.status-toggle.error {
  border-color: #FF4D4F;
}

.status-text.error {
  color: #1F2329;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.review-button {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background-color: #4845F7;
  color: white;
  text-align: center;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0px 8rpx 16rpx 0px rgba(72, 69, 247, 0.2);
}

.review-button:active {
  background-color: #3a37d3;
}