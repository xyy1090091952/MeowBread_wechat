.page {
  background-color: #FFFFFF;
  min-height: 100vh;
}

.container {
  /* 完全无样式，不设置任何padding、margin等 */
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: baseline; /* 改为基线对齐，让不同大小的文字对齐更自然 */
  padding: 40rpx 48rpx; /* 改为48rpx左右边距，与mistake-item保持一致 */
  width: 100%;
  box-sizing: border-box; /* 确保padding不影响总宽度 */
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #1F2329;
  /* 移除margin-left，使用header的padding控制 */
}

.mistake-count {
  font-size: 28rpx;
  color: #8A8A8A;
  /* 移除margin-right，使用header的padding控制 */
}

.mistake-list-scroll {
  height: calc(100vh - 300rpx); /* 减去头部和底部按钮的高度 */
  /* 去掉padding，避免嵌套层级遮挡投影 */
}

.mistake-item {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 0 24rpx 24rpx 24rpx; /* 左右各24rpx margin，底部24rpx margin */
  box-shadow: 8rpx 8rpx 32rpx rgba(0,0,0,0.08);
  display: flex;
  flex-direction: column;
}

.item-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx; /* 改为4rpx */
}

.status-label {
  height: 40rpx; /* 20px */
  border-radius: 20rpx; /* 圆角 */
  font-size: 10px; /* 字体大小 */
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 12rpx; /* 左右内边距 */
  box-sizing: border-box;
}

.status-unseen {
  color: #8A8A8A;
  background-color: #F0F0F0;
}

.status-corrected {
  border: 1px solid #FFCA1D; /* 黄色描边 */
  background-color: transparent;
}

.status-corrected .status-text {
  color: #FFCA1D;
  font-size: 10px;
}

.status-corrected .status-dot {
  width: 24rpx; /* 12px */
  height: 24rpx; /* 12px */
  border-radius: 50%;
  background: linear-gradient(to right, #FFCA1D 0%, #FFEB12 100%);
}

.status-error {
  border: 1px solid #FF1F74; /* 粉色描边 */
  background-color: transparent;
}

.status-error .status-text {
  color: #000000;
  font-size: 10px;
}

.status-error .status-dot {
  width: 24rpx; /* 12px */
  height: 24rpx; /* 12px */
  border-radius: 50%;
  background: linear-gradient(to right, #FF1F74 0%, #FF4E91 100%);
}

.word-info {
  display: flex;
  align-items: center;
}

.word {
  font-size: 16px; 
  font-weight: 600;
  color: #1F2329;
}

/* 词性标签样式重新设计 */
.type {
  width: 84rpx; /* 42px */
  height: 40rpx; /* 20px */
  font-size: 10px; /* 10px字体 */
  padding: 0; /* 清除原有padding */
  border-radius: 20rpx; /* 改为10px圆角 */
  color: white;
  line-height: 40rpx; /* 垂直居中 */
  text-align: center; /* 水平居中 */
  display: inline-block;
  background-color: #6c757d; /* 为未匹配词性提供默认背景色 */
  margin-left: 16rpx; /* 左边距8px */
}

.type.verb {
  background-color: #598BF1;
}

.type.intransitive-verb {
  background-color: #39D763;
}

.type.transitive-verb {
  background-color: #FAAD3A;
}

.type.noun {
  background-color: #B79EFF;
}

.type.adjective {
  background-color: #F56593;
}

.type.adverb {
  background-color: #FF375C;
}

.type.particle {
  background-color: #5bc0de;
}

.type.conjunction {
  background-color: #aa66cc;
}

.type.adjectival-noun {
  background-color: #17a2b8;
}

.type.pronoun {
  background-color: #6f42c1;
}

.type.numeral {
  background-color: #fd7e14;
}

.item-bottom {
  font-size: 12px; /* 改为12px */
  color: #666666; /* 改为#666 */
  line-height: 32rpx; /* 调整行高 */
  /* 移除margin-top */
}

/* 第一行：假名和中文 */
.basic-info {
  font-size: 12px;
  color: #666666;
  line-height: 40rpx; /* 改为20px高度 */
  height: 40rpx; /* 设置固定高度20px */
}

/* 第二行：例句单独展示 */
.example-sentence {
  font-size: 12px;
  color: #666666;
  line-height: 40rpx; /* 改为20px高度 */
  height: 40rpx; /* 设置固定高度20px */
  margin-top: 8rpx; /* 与第一行的间距 */
  text-align: left; /* 左对齐 */
}

.status-toggle {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  border: 1px solid #E0E0E0;
}

.status-text {
  font-size: 24rpx;
  font-weight: bold; /* 字体加粗 */
  color: #000000; /* 黑色 */
  margin-right: 8rpx;
}

.status-switch {
  transform: scale(0.7);
}

.status-toggle.corrected {
  border-color: #FFC107;
}

.status-text.corrected {
  color: #000000;
}

.status-toggle.error {
  border-color: #FF4D4F;
}

.status-text.error {
  color: #000000;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.review-button {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background-color: #4845F7;
  color: white;
  text-align: center;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0px 8rpx 16rpx 0px rgba(72, 69, 247, 0.2);
}

.review-button:active {
  background-color: #3a37d3;
}