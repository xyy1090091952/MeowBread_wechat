/* pages/profile/profile.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  background-color: #ffffff; /* 默认白色背景 */
  min-height: 100vh;
  padding: 20rpx 48rpx 40rpx 48rpx;
}

/* 未登录状态的渐变背景 */
.container.login-mode {
  background: linear-gradient(to bottom, #CFE2FF, #F0F6FC); /* 从CFE2FF渐变到F0F6FC */
}

/* ==================== 用户信息区域 ==================== */
.user-info-section {
  width: 100%; /* 设置满屏宽度 */
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 120rpx;
}

/* 自定义全屏用户区域 */
.fullscreen-user-section {
  width: 100vw; /* 完整视口宽度 */
  margin: 200rpx -48rpx 32rpx -48rpx; /* 增加顶部边距，补偿隐藏导航栏的空间，底部边距32rpx(16px) */
  display: flex;
  flex-direction: row; /* 改为水平排列 */
  align-items: center; /* 垂直居中对齐 */
  padding: 0 48rpx; /* 内部左右边距 */
  box-sizing: border-box;
}

/* 未登录状态样式 */
.avatar-button {
  margin-top: 24rpx;
  padding: 0 48rpx;
  height: 72rpx;
  line-height: 72rpx;
  border: 2rpx solid #4845F7;
  background: transparent;
  color: #4845F7;
  border-radius: 36rpx;
  font-size: 28rpx;
}

.nickname-input {
  margin-top: 32rpx;
  width: 80%;
  height: 96rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 48rpx;
  padding-left: 32rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.login-button {
  margin-top: 48rpx;
  width: 80%;
  height: 96rpx;
  border-radius: 48rpx;
  background: #4845F7;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(72, 69, 247, 0.3);
}

/* 已登录状态样式 */
.avatar {
  width: 128rpx; /* 64px转换为小程序单位 */
  height: 128rpx; /* 64px转换为小程序单位 */
  border-radius: 50%;
  object-fit: cover;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

/* 右侧文字容器 */
.user-text-container {
  margin-left: 24rpx; /* 改为左边距，与头像保持间距 */
  align-items: flex-start; /* 文字左对齐 */
  display: flex;
  flex-direction: column;
  flex: 1; /* 占据剩余空间 */
}

.user-name {
  font-size: 48rpx; /* 24px转换为小程序单位 */
  font-weight: bold; /* 设置为加粗 */
  color: #111;
}

.user-title {
  font-size: 28rpx;
  color: #666;
  margin-top: 8rpx;
}

/* ==================== 答题结果模块 ==================== */
.quiz-results-section {
  width: 100%;
  height: 272rpx;
  background: linear-gradient(to right, #F0F6FC, #CFE2FF);
  border-radius: 48rpx;
  margin-bottom: 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  position: relative;
  box-shadow: 0px 8rpx 24rpx rgba(0, 0, 0, 0.05);
}

/* 内层答题准确率模块 */
.accuracy-module {
  width: 100%;
  height: 176rpx;
  background-color: #fff;
  border-radius: 48rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 48rpx;
  box-sizing: border-box;
}

.accuracy-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.accuracy-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #000;
}

/* 底部统计和详细数据区域 */
.bottom-stats-area {
  height: 96rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 48rpx;
  box-sizing: border-box;
}

.stats-text {
  font-size: 24rpx;
  color: #666666;
}

.detail-btn {
  display: flex;
  align-items: center;
}

.detail-text {
  font-size: 24rpx;
  font-weight: bold;
  color: #4845F7;
  margin-right: 8rpx;
}

.detail-arrow {
  width: 32rpx;
  height: 32rpx;
  filter: invert(27%) sepia(99%) saturate(3948%) hue-rotate(231deg) brightness(98%) contrast(96%);
}

/* ==================== 扭蛋机模块 ==================== */
.gashapon-section {
  width: 100%;
  height: 176rpx;
  border-radius: 48rpx;
  margin: 30rpx 0; /* 上下边距30rpx */
  box-shadow: 0px 8rpx 24rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx; /* 左右内边距与错题库模块保持一致 */
}

.gashapon-background {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%); /* 垂直居中 */
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: 1;
}

/* 重用错题库模块的文本容器样式 */
.gashapon-section .option-text-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex-grow: 1;
  z-index: 2;
  position: relative;
}

.gashapon-section .option-main-text {
  font-size: 40rpx; /* 20px转换为小程序单位约为40rpx */
  font-weight: 800;
  color: #333;
}

.gashapon-section .option-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 20rpx;
  z-index: 2;
  position: relative;
}

/* 扭蛋机箭头颜色 #AA6C0A */
.arrow-gashapon {
  filter: invert(47%) sepia(85%) saturate(1739%) hue-rotate(21deg) brightness(96%) contrast(104%);
}

/* ==================== 错题库模块 ==================== */
.mistake-section {
  width: 100%;
  background: linear-gradient(to right, #4845F7, #93CDFF);
  border-radius: 48rpx;
  padding: 40rpx 40rpx;
  box-shadow: 0px 8rpx 24rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.mistake-section .option-text-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex-grow: 1;
}

.mistake-section .option-main-text {
  font-size: 32rpx;
  font-weight: 800;
  color: #FFFFFF;
}

.mistake-section .option-sub-text {
  font-size: 24rpx;
  margin-top: 8rpx;
  color: #FFFFFF;
}

.mistake-section .option-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 20rpx;
}

/* 箭头图标颜色控制 */
.arrow-white {
  filter: invert(100%); /* 白色箭头 */
}

.arrow-black {
  filter: none; /* 黑色箭头，保持原色 */
}

/* ==================== 通用样式 ==================== */

/* 移除点击缩小效果，保持统一 */

/* 响应式调整 */
@media (max-width: 350px) {
  .container {
    padding: 0 16rpx 40rpx 16rpx;
  }
  
  .user-info-section,
  .quiz-results-section,
  .gashapon-section,
  .mistake-section {
    padding: 24rpx;
  }
}

/* 通用投影 */
.shadow{box-shadow:0 8rpx 24rpx rgba(0,0,0,0.05);} 

/* 登录卡片 - 简洁全宽设计 */
.login-card{
  width: 100%; /* 占满父容器宽度 */
  margin: 0;
  padding: 48rpx; /* 统一内边距 */
  border-radius: 48rpx;
  background: #FFF;
  display: flex;
  flex-direction: column;
  align-items: center; /* 内容居中对齐 */
  box-sizing: border-box;
}
.login-title{font-size:48rpx;font-weight:600;color:#111;align-self:flex-start;} /* 标题左对齐 */
.login-subtitle{font-size:24rpx;color:#666;margin:16rpx 0 40rpx 0;align-self:flex-start;} /* 副标题左对齐 */
.avatar-placeholder{
  width:200rpx;
  height:200rpx;
  border-radius:50%;
  background:linear-gradient(#F0F6FC 0%, #CFE2FF 100%);
  align-self:center; /* 头像占位符居中 */
  margin-bottom: 48rpx; /* 距离下方24px，转换为48rpx */
  position: relative; /* 为头像预览定位 */
  overflow: hidden; /* 隐藏超出圆形边界的部分 */
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 头像预览样式 */
.avatar-preview {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover; /* 保持比例并填满容器 */
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1; /* 确保头像在渐变背景之上 */
}
/* 完全自定义的头像按钮 - 重置所有微信button默认样式 */
.avatar-btn{
  width: calc(100% - 0rpx) !important; /* 按钮占满可用宽度 */
  margin: 0 !important; /* 去掉所有边距 */
  height: 88rpx !important;
  border: 2rpx solid #4845F7 !important;
  border-radius: 44rpx !important;
  color: #4845F7 !important;
  font-size: 32rpx !important;
  font-weight: 600 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  background: transparent !important;
  background-color: transparent !important;
  padding: 0 !important;
  box-sizing: border-box !important;
  
  /* 重置微信button的所有默认样式 */
  position: relative !important;
  text-align: center !important;
  text-decoration: none !important;
  overflow: visible !important;
  transform: none !important;
  
  /* 移除微信button的默认阴影和边框 */
  box-shadow: none !important;
  outline: none !important;
  -webkit-appearance: none !important;
  -webkit-tap-highlight-color: transparent !important;
}

/* 移除微信button的伪元素边框 */
.avatar-btn::after {
  border: none !important;
  background: none !important;
  content: none !important;
  display: none !important;
}

/* 移除微信button的伪元素背景 */
.avatar-btn::before {
  background: none !important;
  content: none !important;
  display: none !important;
}

/* 点击态效果 - 自定义 */
.avatar-btn:active {
  opacity: 0.8 !important;
}
/* 完全自定义的昵称输入框 - 微信推荐方式 */
.nickname-input{
  width: calc(100% - 0rpx) !important; /* 输入框占满可用宽度 */
  margin: 40rpx 0 0 0 !important;
  height: 96rpx !important;
  border: 2rpx solid #E0E0E0 !important;
  border-radius: 48rpx !important;
  color: #333333 !important;
  font-size: 32rpx !important;
  font-weight: 600 !important;
  background: #ffffff !important;
  padding: 0 32rpx !important;
  box-sizing: border-box !important;
  text-align: center !important;
  
  /* 移除小程序input的默认样式 */
  outline: none !important;
  -webkit-appearance: none !important;
  -webkit-tap-highlight-color: transparent !important;
}

/* 输入框聚焦状态 */
.nickname-input:focus {
  border-color: #4845F7 !important;
  box-shadow: 0 0 0 4rpx rgba(72, 69, 247, 0.1) !important;
}

/* placeholder样式 */
.nickname-input::-webkit-input-placeholder {
  color: #999999 !important;
  text-align: center !important;
}

/* 已输入昵称的状态 */
.nickname-input.has-nickname {
  border-color: #4CAF50 !important;
  background-color: #F1F8E9 !important;
}
