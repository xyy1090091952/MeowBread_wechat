/* pages/profile/profile.wxss */
.container {
  padding: 20rpx;
}
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}
.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}
.nickname {
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #333;
}

.avatar-button {
  margin-top: 20rpx;
  background-color: #07c160;
  color: white;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}

.nickname-input {
  margin-top: 20rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 15rpx;
  width: 80%;
  text-align: center;
  font-size: 28rpx;
}

.login-button {
  margin-top: 30rpx;
  background-color: #07c160;
  color: white;
  border-radius: 8rpx;
  padding: 15rpx 30rpx;
  font-size: 30rpx;
  width: 80%;
}
.menu-section {
  margin-top: 40rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 30rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-text {
  font-size: 32rpx;
}

.menu-arrow {
  width: 16rpx;
  height: 28rpx;
}
