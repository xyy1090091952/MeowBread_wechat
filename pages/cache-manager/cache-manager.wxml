<!--pages/cache-manager/cache-manager.wxml-->
<view class="container">
  <view class="section-title fade-in-element fade-delay-2 show">缓存总览</view>
  <view class="detail-forms fade-in-element fade-delay-3 show">
    <view class="form-item-wrapper">
      <view class="form-label">总缓存数</view>
      <view class="form-value">{{totalCache.count}}</view>
    </view>
    <view class="form-item-wrapper">
      <view class="form-label">总占用空间</view>
      <view class="form-value">{{totalCache.size}} KB</view>
    </view>
  </view>

  <view class="section-title fade-in-element fade-delay-4 show">缓存详情</view>
  <view class="detail-forms fade-in-element fade-delay-5 show">
    <!-- 单词缓存 -->
    <view class="form-item-wrapper">
      <view class="form-label">单词缓存</view>
      <view class="form-value">{{wordCache.count}} 条 / {{wordCache.size}} KB</view>
    </view>
    <!-- 图片缓存 -->
    <view class="form-item-wrapper">
      <view class="form-label">图片缓存</view>
      <view class="form-value">{{imageCache.count}} 张 / {{imageCache.size}} KB</view>
    </view>
  </view>

  <!-- 操作按钮 -->
  <view class="actions-section">
    <button 
      class="action-button primary" 
      bindtap="clearAllCache"
      disabled="{{loading}}"
    >
      <view class="button-content">
        <view class="button-icon">🧹</view>
        <view class="button-text">清理所有缓存</view>
      </view>
    </button>
  </view>

  <!-- 加载状态 -->
  <view class="loading-overlay" wx:if="{{loading}}">
    <view class="loading-content">
      <view class="loading-spinner"></view>
      <view class="loading-text">处理中...</view>
    </view>
  </view>
</view>