<!-- 知识库页面通用模板 - 按照Markdown导入制作规范 -->
<view class="page">
  <!-- 页面标题 -->
  <view class="page-title">{{title}}</view>
  
  <!-- 章节内容 -->
  <view wx:for="{{sections}}" wx:key="id" wx:for-item="section" class="section">
    
    <!-- 章节标题 -->
    <view class="section-title" wx:if="{{section.title}}">{{section.title}}</view>
    
    <!-- 章节文本内容 -->
    <view wx:if="{{section.content}}" class="section-content">
      <text>{{section.content}}</text>
    </view>
    
    <!-- 如果是表格类型 -->
    <view wx:if="{{section.type === 'table'}}" class="table-wrapper">
      <view class="table-container">
        <!-- 表格头部 -->
        <view class="table-header">
          <view class="header-cell" wx:for="{{section.tableData.headers}}" wx:key="index">
            {{item}}
          </view>
        </view>
        <!-- 表格数据 -->
        <block wx:for="{{section.tableData.rows}}" wx:key="index" wx:for-item="row">
          <view class="table-row">
            <view class="table-cell" wx:for="{{row}}" wx:key="index">{{item}}</view>
          </view>
        </block>
      </view>
    </view>
    
    <!-- 如果有子章节 -->
    <view wx:if="{{section.subsections}}" wx:for="{{section.subsections}}" wx:key="id" wx:for-item="subsection" class="subsection">
      <!-- 子章节标题 -->
      <view class="subsection-title" wx:if="{{subsection.title}}">{{subsection.title}}</view>
      
      <!-- 子章节文本内容 -->
      <view wx:if="{{subsection.content}}" class="subsection-content">
        <text>{{subsection.content}}</text>
      </view>
      
      <!-- 子章节表格 -->
      <view wx:if="{{subsection.type === 'table'}}" class="table-wrapper">
        <view class="table-container">
          <!-- 表格头部 -->
          <view class="table-header">
            <view class="header-cell" wx:for="{{subsection.tableData.headers}}" wx:key="index">
              {{item}}
            </view>
          </view>
          <!-- 表格数据 -->
          <block wx:for="{{subsection.tableData.rows}}" wx:key="index" wx:for-item="row">
            <view class="table-row">
              <view class="table-cell" wx:for="{{row}}" wx:key="index">{{item}}</view>
            </view>
          </block>
        </view>
      </view>
      
      <!-- 子章节列表 -->
      <view wx:if="{{subsection.type === 'list'}}" class="list-container">
        <view class="list-item" wx:for="{{subsection.items}}" wx:key="index">
          <text>{{item}}</text>
        </view>
      </view>
    </view>
    
  </view>
  
  <!-- 错误状态 -->
  <view wx:if="{{!sections || sections.length === 0}}" class="error">
    暂无内容
  </view>
</view>