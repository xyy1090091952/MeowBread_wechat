/* pages/knowledge/knowledge.wxss */
.container {
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  min-height: 100vh;
  padding: 0 0 400rpx 0;
}

/* 顶部分类滑动按钮区域 */
.category-scroll-wrapper {
  width: 100%;
  margin-top: 48rpx;
  padding-left: 48rpx; /* 与content-area保持一致的左边距 */
  overflow: visible; /* 确保投影不被裁剪 */
  min-height: 180rpx; /* 确保有足够高度容纳按钮和投影 */
}

.category-scroll {
  width: 100%;
  white-space: nowrap;
  overflow-x: scroll;
  overflow-y: visible; /* 确保垂直方向投影不被裁剪 */
  -webkit-overflow-scrolling: touch; /* iOS平滑滚动 */
  /* 确保滚动条不遮挡投影 */
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE/Edge */
}

.category-scroll::-webkit-scrollbar {
  display: none; /* Chrome/Safari/WebKit */
}

.category-buttons {
  display: inline-flex;
  flex-direction: row;
  padding-right: 48rpx; /* 与content-area保持一致的右边距 */
  padding-bottom: 32rpx; /* 为投影留出更多空间 */
  padding-top: 16rpx; /* 为投影留出更多空间 */
  position: relative; /* 为indicator提供定位基准 */
}

.category-button {
  width: 480rpx; /* 240px */
  height: 128rpx; /* 64px */
  margin-right: 24rpx; /* 按钮间距 */
  border-radius: 48rpx; /* 24px圆角 */
  display: flex;
  align-items: center;
  justify-content: flex-start; /* 改为左对齐 */
  padding-left: 48rpx; /* 左边距24px */
  flex-shrink: 0;
  transition: all 0.3s ease;
  /* 未选中状态：白色底 + 投影效果 */
  background-color: #ffffff;
  box-shadow: 0px 8rpx 24rpx rgba(0, 0, 0, 0.05); /* 参考option-card的投影样式 */
  position: relative; /* 确保投影层级正确 */
  z-index: 1; /* 确保投影不被遮挡 */
}

.button-text-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start; /* 左对齐 */
}

.button-main-text {
  font-size: 48rpx; /* 24px */
  font-weight: bold;
  color: #111111; /* 未选中：黑色文字 */
  line-height: 1.2;
}

.button-sub-text {
  font-size: 24rpx; /* 12px */
  color: #666666; /* 未选中：#666 */
  line-height: 1.2;
  margin-left: 16rpx; /* 右间距8px */
}

.category-button.selected {
  /* 选中状态：渐变背景 */
  background: linear-gradient(90deg, #4845f7 0%, #93cdff 100%);
  box-shadow: 0px 8rpx 24rpx rgba(72, 69, 247, 0.2); /* 参考option-card的投影样式，调整颜色 */
}

.category-button.selected .button-main-text {
  color: #ffffff; /* 选中：白色文字 */
}

.category-button.selected .button-sub-text {
  color: #ffffff; /* 选中：白色文字 */
}

/* 内容区域 DIV2 */
.content-area {
  width: calc(100% - 96rpx); /* 总宽度减去左右边距 */
  height: 960rpx; /* 固定高度480px */
  margin: 48rpx 48rpx 0 48rpx; /* 上边距调整为48rpx，左右边距48rpx，下边距0 */
  position: relative; /* 确保内部绝对定位的卡片相对于此容器定位 */
}

/* 内容网格布局 */
.content-grid {
  position: relative;
  height: 100%;
  /* 移除flex布局，改为相对定位 */
}

/* 内容卡片 DIV3 */
.content-card {
  position: absolute;
  width: 400rpx; /* 200px */
  height: auto; /* 改为自适应高度，避免底部白色条 */
  min-height: 400rpx; /* 设置最小高度保持卡片基本尺寸 */
  border-radius: 32rpx;
  overflow: hidden;
  background-color: #ffffff;
  box-shadow: 16rpx 16rpx 64rpx rgba(0,0,0,0.08);
  cursor: pointer;
  transition: transform 0.2s ease;
}

.content-card:hover {
  transform: translateY(-8rpx);
}

/* 卡片叠加位置设置 */
.content-card:nth-child(1) {
  top: 120rpx; /* 60px */
  left: 0rpx; /* 0px */
  z-index: 1;
}

.content-card:nth-child(2) {
  top: 0rpx; /* 0px */
  left: 240rpx; /* 120px，向右偏移120px */
  z-index: 2;
}

.content-card:nth-child(3) {
  top: 160rpx; /* 80px */
  left: 480rpx; /* 240px，向右偏移240px（120px*2） */
  z-index: 3;
}

/* 上半部分 - 背景图片区域 */
.card-image-section {
  width: 100%;
  height: 512rpx; /* 256px */
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  position: relative;
  padding: 48rpx; /* 距离边缘24px */
  box-sizing: border-box;
}

.card-labels {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.card-label-primary {
  font-size: 48rpx; /* 24px */
  font-weight: 600;
  color: #000000; /* 改为黑色 */
  text-align: left;
}

.card-label-secondary {
  font-size: 48rpx; /* 24px */
  font-weight: bold; /* 改为加粗 */
  color: #000000; /* 改为黑色 */
  text-align: left;
}

/* 下半部分 - 标题区域 */
.card-title-section {
  width: 100%;
  height: 112rpx; /* 56px */
  display: flex;
  align-items: center;
  padding: 0 48rpx; /* 左右边距24px */
  box-sizing: border-box;
  /* 添加从左到右的渐变背景：F0F6FC到CFE2FF */
  background: linear-gradient(to right, #F0F6FC 0%, #CFE2FF 100%);
}

.card-title {
  font-size: 32rpx; /* 16px - 调整字体大小 */
  font-weight: 600;
  color: #111111;
  text-align: left;
}

/* 空内容状态 */
.empty-content {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: #999999;
  font-size: 56rpx;
}

/* 载入动画 - 从左到右错位进入 */
.slide-in-card {
  opacity: 0;
  transform: translateX(200rpx);
  /* 只在显示时有过渡动画，隐藏时瞬间重置 */
}

.slide-in-card.show {
  opacity: 1;
  transform: translateX(0);
  transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* 为每张卡片设置不同的动画延迟 */
.slide-in-card:nth-child(1).show {
  transition-delay: 0s; /* 卡片1立即进入 */
}

.slide-in-card:nth-child(2).show {
  transition-delay: 0.15s; /* 卡片2延迟0.15s */
}

.slide-in-card:nth-child(3).show {
  transition-delay: 0.3s; /* 卡片3延迟0.3s */
}


