/* pages/word-list/word-list.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  background-color: rgb(255, 255, 255); /* 与答题页面保持一致的背景色 */
  min-height: 100vh;
  padding: 0 0 220rpx 0; /* 调整底部padding为220rpx */
}

/* ===== 单词列表页面样式 ===== */

/* 单词列表顶部导航栏 */
.word-list-header {
  width: calc(100% - 96rpx); /* 减去左右各48rpx的边距 */
  margin: 32rpx 48rpx 0 48rpx;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.title-info-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.word-list-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #111111;
  line-height: 48rpx;
  text-align: left;
}

.word-count-info {
  font-size: 24rpx;
  color: #666666;
  line-height: 32rpx;
  margin-top: 4rpx;
  text-align: left;
}

.filter-button {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 24rpx;
}

.filter-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 单词列表滚动区域 */
.word-list-scroll {
  width: 100%;
  flex: 1;
  height: calc(100vh - 200rpx); /* 减去顶部导航栏高度 */
}

.word-list-container {
  width: calc(100% - 96rpx);
  margin: 0 48rpx;
  padding-bottom: 40rpx;
}

/* 单词卡片 - 参考mistake-item样式 */
.word-card {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 0 0rpx 24rpx 0rpx; /* 修改margin为左右0边距 */
  box-shadow: 8rpx 8rpx 32rpx rgba(0,0,0,0.08); /* 参考mistake-item的阴影 */
  display: flex;
  flex-direction: column;
}

.word-item-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.word-info {
  display: flex;
  align-items: center;
}

.word-main {
  font-size: 16px; /* 参考mistake-item的word样式 */
  font-weight: 600;
  color: #1F2329;
  margin-right: 16rpx;
}

/* 词性标签样式 - 参考mistake-item的type样式 */
.word-type {
  width: 84rpx; /* 42px */
  height: 40rpx; /* 20px */
  font-size: 10px; /* 10px字体 */
  padding: 0; /* 清除原有padding */
  border-radius: 20rpx; /* 改为10px圆角 */
  color: white;
  line-height: 40rpx; /* 垂直居中 */
  text-align: center; /* 水平居中 */
  display: inline-block;
  background-color: #6c757d; /* 为未匹配词性提供默认背景色 */
  margin-left: 16rpx; /* 左边距8px */
}

/* 词性颜色样式 - 复用mistake-item的词性颜色 */
.word-type.verb {
  background-color: #598BF1;
}

.word-type.intransitive-verb {
  background-color: #39D763;
}

.word-type.transitive-verb {
  background-color: #FAAD3A;
}

.word-type.noun {
  background-color: #B79EFF;
}

.word-type.adjective {
  background-color: #F56593;
}

.word-type.adverb {
  background-color: #FF375C;
}

.word-type.particle {
  background-color: #5bc0de;
}

.word-type.conjunction {
  background-color: #aa66cc;
}

.word-type.adjectival-noun {
  background-color: #17a2b8;
}

.word-type.pronoun {
  background-color: #6f42c1;
}

.word-type.numeral {
  background-color: #fd7e14;
}

.word-lesson {
  font-size: 20rpx;
  color: #999999;
}

.word-item-bottom {
  font-size: 12px; /* 参考mistake-item的item-bottom */
  color: #666666; /* 参考mistake-item的颜色 */
  line-height: 32rpx; /* 调整行高 */
}

/* 第一行：假名和汉字 */
.word-basic-info {
  font-size: 12px;
  color: #666666;
  line-height: 40rpx; /* 改为20px高度 */
  height: 40rpx; /* 设置固定高度20px */
}

/* 第二行：例句和课程号 */
.word-example-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 12px;
  color: #666666;
  line-height: 40rpx; /* 改为20px高度 */
  height: 40rpx; /* 设置固定高度20px */
  margin-top: 8rpx; /* 与上一行的间距 */
}

.word-example {
  flex: 1;
  font-size: 12px;
  color: #666666;
}

/* 筛选弹窗样式 */
.filter-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
}

.filter-content {
  width: 100%;
  background-color: #ffffff;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  padding: 48rpx 48rpx calc(48rpx + env(safe-area-inset-bottom));
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.filter-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #111111;
}

.close-button {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #666666;
}

.filter-options {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.filter-option {
  height: 88rpx;
  padding: 0 32rpx;
  border-radius: 24rpx;
  border: 2rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  background-color: #ffffff;
  transition: all 0.2s ease;
}

.filter-option.selected {
  border-color: #4845f7;
  background-color: #f0f6fc;
}

.filter-option text {
  font-size: 32rpx;
  color: #111111;
}

/* 底部白色渐变遮罩 */
.bottom-gradient-mask {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 240rpx; /* 120px高度 */
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 100%);
  pointer-events: none; /* 不阻挡点击事件 */
  z-index: 10; /* 确保在内容之上 */
}

/* 渐显动画相关样式 */
.fade-in-element {
  opacity: 0;
  transform: translateY(20px);
  transition: opacity 0.3s ease-out, transform 0.3s ease-out;
}

.fade-in-element.show {
  opacity: 1;
  transform: translateY(0);
}

.fade-delay-1 {
  transition-delay: 0.1s;
}

.fade-delay-2 {
  transition-delay: 0.2s;
} 