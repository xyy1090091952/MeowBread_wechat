/* pages/word-list/word-list.wxss */

/* ==================== Word-List页面专用动画样式 ==================== */
/* 与profile页面保持一致的动画效果 */

/* Word-List页面全局动画优化 - 只覆盖必要属性，保留全局fade-delay延迟 */
.fade-in-element {
  transform: translateY(30rpx); /* 与answer和profile页面保持一致的移动幅度 */
  transition-duration: 0.8s; /* 只覆盖动画时长，不影响延迟时间 */
  transition-timing-function: cubic-bezier(0.25, 0.46, 0.45, 0.94); /* 只覆盖缓动曲线 */
}

.fade-in-element.show {
  transform: translateY(0);
}

/* ==================== 原有样式 ==================== */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  background-color: rgb(255, 255, 255); /* 与答题页面保持一致的背景色 */
  min-height: 100vh;
  padding: 0 0 220rpx 0; /* 调整底部padding为220rpx */
}

/* ===== 单词列表页面样式 ===== */

/* 单词列表顶部导航栏 */
.word-list-header {
  width: calc(100% - 96rpx); /* 减去左右各48rpx的边距 */
  margin: 32rpx 48rpx 0 48rpx;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.title-info-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-left: 16rpx;
}

.word-list-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

/* 新增：右侧控件区域样式 */
.right-controls {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 16rpx;
}

/* 修改：课程选择显示字段样式，现在在右侧 */
.course-selector {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.word-count-info {
  font-size: 24rpx;
  color: #999;
}

.filter-button {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.filter-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 单词列表滚动区域 */
.word-list-scroll {
  width: 100%;
  flex: 1;
  height: calc(100vh - 200rpx); /* 减去顶部导航栏高度 */
}

.word-list-container {
  width: 100%; /* word-card组件自己会处理margin */
  padding-bottom: 40rpx;
}

/* 底部白色渐变遮罩 */
.bottom-gradient-mask {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(to top, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 0.8) 50%, rgba(255, 255, 255, 0) 100%);
  pointer-events: none;
  z-index: 10;
} 